<%= form_for(@license) do |f| -%>
  <%= f.error_messages -%>
  <p>
    <%= f.label t('activerecord.attributes.license.name') -%><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.license.display_name') -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.license.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>
  <p>
    <%= f.submit -%>
  </p>
<%- end -%>
<%= javascript_tag("$('#license_name').focus()") -%>
