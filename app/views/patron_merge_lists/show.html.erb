<div id="submenu">
  <ul>
    <li><%= link_to ('Add a patron'), patron_merge_list_patrons_path(@patron_merge_list) -%></li>
    <li><%= link_to t('page.edit'), edit_patron_merge_list_path(@patron_merge_list) -%></li>
    <li><%= link_to t('page.back'), patron_merge_lists_path -%></li>
  </ul>
</div>

<div id="content_detail">
<%- form_for(:patron_merge_list, :url => patron_merge_list_path(@patron_merge_list, :mode => 'merge'), :html => { :method => :put }) do |f| -%>
  <p>
  <b><%= t('page.title') -%>:</b>
    <%=h @patron_merge_list.title -%>
  </p>

  <ul>
    <%- @patron_merge_list.patrons.each do |patron| -%>
      <li><%= radio_button_tag 'selected_patron_id', patron.id -%><%= link_to h(patron.full_name), patron_path(patron) -%></li>
    <%- end -%>
  </ul>
  <%- if @patron_merge_list.patrons.size > 1 -%>
    <%= f.submit "Merge", :confirm => t('page.are_you_sure') -%>
  <%- end -%>
<%- end -%>

</div>
