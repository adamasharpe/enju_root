<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.subject_heading_type')) -%></h1>
<div id="content_list">

<%= form_for(@subject_heading_type) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.attributes.subject_heading_type.name') -%><br />
    <%= f.text_field :name, :class => 'short_name' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.subject_heading_type.display_name') -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.subject_heading_type.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.show'), @subject_heading_type -%></li>
    <li><%= link_to t('page.back'), subject_heading_types_path -%></li>
  </ul>
</div>
