<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.subject_heading_type')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.subject_heading_type.name') -%></th>
    <th><%= t('activerecord.attributes.subject_heading_type.display_name') -%></th>
    <th><%= t('activerecord.attributes.subject_heading_type.note') -%></th>
  </tr>

<%- for subject_heading_type in @subject_heading_types -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if subject_heading_type.is_deletable_by(current_user) -%>
        <%= move_position(subject_heading_type) -%>
      <%- end -%>
    </td>
    <td><%= link_to h(subject_heading_type.name), subject_heading_type -%></td>
    <td><%= link_to h(subject_heading_type.display_name.localize), subject_heading_type -%></td>
    <td><%= subject_heading_type.note -%></td>
    <td><%= link_to t('page.edit'), edit_subject_heading_type_path(subject_heading_type) -%></td>
    <td><%= link_to t('page.destroy'), subject_heading_type, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.subject_heading_type')), new_subject_heading_type_path -%></li>
  </ul>
</div>
