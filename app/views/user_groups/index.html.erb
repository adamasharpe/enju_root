<div id="submenu">
  <ul>
    <li><%= link_to ('New user_group'), new_user_group_path -%></li>
  </ul>
</div>
  
<div id="content_detail">
<h1><%= ('Listing user_groups') -%></h1>

<table style="width: 100%">
  <tr>
    <th><%= ('Name') -%></th>
    <th><%= ('Display name') -%></th>
    <th><%= ('Note') -%></th>
  </tr>
  
<%- for user_group in @user_groups -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(user_group.name), user_group -%></td>
    <td><%= link_to h(user_group.display_name), user_group -%></td>
    <td><%=h user_group.note -%></td>
    <td><%= link_to t('edit'), edit_user_group_path(user_group) -%></td>
    <td><%= link_to t('destroy'), user_group_path(user_group), :confirm => ('Are you sure?'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

</div>
