<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.user_group')) -%></h1>
<div id="content_list">

<%- form_for(@user_group, :url => user_group_path(@user_group)) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.attributes.user_group.name') -%><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.user_group.display_name') -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.user_group.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), user_group_path(@user_group) -%></li>
    <li><%= link_to t('page.back'), user_groups_path -%></li>
  </ul>
</div>
