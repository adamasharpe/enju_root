<div id="main">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.user_reserve_stat')) -%></h1>
<div class="inner">
<p>
  <b><%= t('activerecord.attributes.user_reserve_stat.start_date') -%>:</b>
  <%= l(@user_reserve_stat.start_date) -%>
</p>

<p>
  <b><%= t('activerecord.attributes.user_reserve_stat.end_date') -%>:</b>
  <%= l(@user_reserve_stat.end_date) -%>
</p>

<p>
  <b><%= t('activerecord.attributes.user_reserve_stat.note') -%>:</b>
  <%=h @user_reserve_stat.note -%>
</p>

<table class="index">
  <tr>
    <th><%= t('activerecord.models.user') -%></th>
    <th><%= t('activerecord.attributes.reserve_stat_has_user.reserves_count') -%></th>
  </tr>
  <%- @stats.each do |stat| -%>
    <tr class="line<%= cycle("0", "1") -%>">
      <td>
        <%= link_to h(stat.user.login), user_path(stat.user.login) -%>
      </td>
      <td><%=h stat.reserves_count -%></td>
    </tr>
  <% end -%>
</table>

<%= will_paginate(@stats, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to t('page.edit'), edit_user_reserve_stat_path(@user_reserve_stat) -%></li>
    <li><%= link_to t('page.back'), user_reserve_stats_path -%></li>
  </ul>
  <h4><%= t('page.export') -%></h4>
  <ul>
    <li><%= link_to ('CSV'), user_reserve_stat_path(@user_reserve_stat, :format => :csv, :locale => @locale) -%></li>
  </ul>
</div>
