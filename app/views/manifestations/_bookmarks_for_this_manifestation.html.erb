<%- unless @manifestation.bookmarks.empty? -%>
  <ul>
  <%- @manifestation.bookmarks.each do |bookmark| -%>
    <%- if bookmark.user.share_bookmarks -%>
      <li><%= link_to h(bookmark.user.username), user_bookmark_path(bookmark.user.username, bookmark) -%>
      <%- bookmark.tag_counts.each do |tag| -%>
        [<%= link_to h(tag.name), manifestations_path(:tag => tag.name) -%>]
      <%- end -%>
      <%= bookmark.note -%>
      <%- if user_signed_in? and current_user == bookmark.user -%>
        <%= link_to image_tag('/icons/page_edit.png', :alt => t('page.edit')), edit_user_bookmark_path(bookmark.user.username, bookmark) -%>
      <%- end -%>
      </li>
    <%- end -%>
  <%- end -%>
  </ul>
<%- else -%>
  <p>
    <%= t('bookmark.not_bookmarked') -%>
    <%- if user_signed_in? -%>
      <%= link_to t('bookmark.add_to_my_bookmark'), new_user_bookmark_path(current_user.username, :url => URI::Generic.build(:scheme => 'http', :host => request.host, :port => request.port, :path => url_for)) -%>
    <%- end -%>
  </p>
<%- end -%>
