<h4><%= t('activerecord.models.subject') -%></h4>
<%- unless @subject_facet.rows.blank? -%>
<ul>
  <%- @subject_facet.rows[0..19].each do |facet| -%>
    <%- subject = Subject.find(facet.value) -%>
    <li>
      <%= link_to "#{h(subject.term)} (#{facet.count})", url_for(:params => params.merge(:page => nil, :subject => h(subject.term), :view => nil)) -%>
    </li>
  <%- end -%>
  <%- if @subject_by_term -%>
    <li><%= link_to t('page.remove_this_facet'), params.merge(:subject => nil, :page => nil, :view => nil) -%></li>
  <%- end -%>
</ul>
<%- else -%>
  <p><%= t('page.no_subject') -%></p>
<%- end -%>
