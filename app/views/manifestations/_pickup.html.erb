<div id="pickup_book_jacket">
  <%- cache(:controller => :manifestations, :action => :show, :id => @manifestation.id, :action_suffix => 'book_jacket') do -%>
     <%= book_jacket(@manifestation) -%>
  <%- end -%>
</div>
<%- cache(:controller => :manifestations, :action => :show, :id => @manifestation.id, :action_suffix => 'pickup', :locale => @locale) do -%>
  <div style="float: left">
    <p>
    <strong><%= t('activerecord.models.subject') -%>:</strong>
    <%- @manifestation.subjects.each do |subject| -%>
      <%= link_to h(subject.term), manifestations_path(:query => "subject: #{h(subject.term)}") -%>
    <%- end -%>
    </p>
    <p>
      <strong><%= t('page.tag') -%>:</strong>
      <%- @manifestation.tags.each do |tag| -%>
        <%= link_to h(tag.name), manifestations_path(:tag => tag.name) -%>
      <%- end -%>
    </p>
  </div>
  <div style="clear: both"></div>
  <div style="margin-top: 5px">
    <%= render :partial => 'manifestations/show_index', :locals => {:manifestation => @manifestation} -%>
    <%= render :partial => 'manifestations/holding', :locals => {:manifestation => @manifestation} -%>
  </div>
<%- end -%>
