<%- if @manifestation -%>
<div id="pickup_book_jacket">
  <%- cache(:controller => :manifestations, :action => :show, :id => @manifestation.id, :page => 'book_jacket', :role => current_user_role_name, :locale => @locale) do -%>
     <%= book_jacket(@manifestation) -%>
  <%- end -%>
</div>
<%- cache(:controller => :manifestations, :action => :show, :id => @manifestation.id, :page => 'pickup', :locale => @locale, :role => current_user_role_name) do -%>
  <div style="float: left">
    <p>
    <strong><%= t('activerecord.models.subject') -%>:</strong>
    <%- @manifestation.subjects.each do |subject| -%>
      <%= link_to subject.term, manifestations_path(:query => "subject_sm: #{h(subject.term)}") -%>
    <%- end -%>
    </p>
    <p>
      <strong><%= t('page.tag') -%>:</strong>
      <%- @manifestation.tags.each do |tag| -%>
        <%= link_to tag.name, manifestations_path(:tag => tag.name) -%>
      <%- end -%>
    </p>
  </div>
  <div style="clear: both"></div>
  <div style="margin-top: 5px">
    <%= render :partial => 'manifestations/show_index', :locals => {:manifestation => @manifestation} -%>
    <%= render :partial => 'manifestations/holding', :locals => {:manifestation => @manifestation} -%>
  </div>
<%- end -%>
<%- end -%>
