<%- cache(:controller => :manifestations, :action => :show, :id => manifestation.id, :page => 'title', :role => current_user_role_name, :locale => @locale) do -%>
  <h2 class="resource_title">
    [M]
    <%= link_to h(manifestation.original_title), manifestation -%>
    <%= link_to form_icon(manifestation.carrier_type), manifestation -%>
    <%- manifestation.expressions.each do |expression| -%>
      <%= link_to content_type_icon(expression.content_type), expression -%>
    <%- end -%>
  </h2>
  <p>
    <%- unless manifestation.creators.blank? -%>
      <%= t('page.author') -%>: <%= raw patrons_list(manifestation.creators, current_user) -%>
    <%- end -%>
    <%- unless manifestation.contributors.blank? -%>
      <%= t('page.editor') -%>: <%= raw patrons_list(manifestation.contributors, current_user) -%>
    <%- end -%>
    <%- unless manifestation.publishers.blank? -%>
      <%= t('page.publisher') -%>: <%= raw patrons_list(manifestation.publishers, current_user) -%>
    <% end %>
    <%- if manifestation.date_of_publication -%>
      (<%= manifestation.date_of_publication.strftime('%Y') -%>)
    <%- end -%>
    <%- unless manifestation.access_address.blank? -%>
      <br />
      <%= link_to h(manifestation.access_address), h(manifestation.access_address) -%>
      <%= link_to image_tag('icons/world_go.png', :size => '16x16', :alt => ('Web')), h(manifestation.access_address) -%>
    <%- end -%>
  </p>
<%- end -%>
