<%- cache(:id => manifestation.id, :controller => :manifestations, :action => :show, :action_suffix => 'show_index') do -%>
  <strong><%= link_to h(manifestation.original_title), manifestation -%></strong>
  <%- if manifestation.serial? -%>
    <%=h manifestation.volume_number_list -%>
    <%- unless manifestation.issue_number_list.blank? -%>
      (<%=h manifestation.issue_number_list -%>)
    <%- end -%>
    <%=h manifestation.serial_number_list -%>
  <%- end -%>
  <%= form_icon(manifestation.manifestation_form) -%>
  <%= image_tag('/icons/newspaper.png', :size => '16x16', :alt => t('manifestation.serial')) if manifestation.serial? -%>
  <%= link_to image_tag('/icons/world_go.png', :size => '16x16', :alt => t('manifestation.web')), manifestation.access_address unless manifestation.access_address.blank? -%>
  <%- manifestation.expressions.each do |expression| -%>
    <%= link_to expression_form_icon(expression.expression_form), expression -%>
  <%- end -%>
  <br />
  <div id="author_list_<%=h manifestation.id -%>">
    <%= render :partial => 'manifestations/show_authors', :locals => {:manifestation => manifestation} -%>
  </div>
<%- end -%>
