<h4><%= t('activerecord.models.carrier_type') -%></h4>
<ul>
  <%- @carrier_type_facet.rows.each do |facet| -%>
    <li>
      <%- carrier_type = CarrierType.first(:conditions => {:name => facet.value}) -%>
      <%= form_icon(carrier_type) -%>
      <%- if params[:carrier_type] == carrier_type.name -%><strong><%- end -%>
        <%= link_to h("#{carrier_type.display_name.localize} (" + facet.count.to_s + ")"), url_for(:params => params.merge(:carrier_type => carrier_type.name, :page => nil, :view => nil)) -%>
      <%- if params[:carrier_type] == carrier_type.name -%></strong><%- end -%>
    </li>
  <%- end -%>
  <%- if params[:carrier_type] -%>
    <li><%= link_to t('page.remove_this_facet'), url_for(:params => params.merge(:carrier_type => nil, :page => nil, :view => nil)) -%></li>
  <%- end -%>
</ul>
