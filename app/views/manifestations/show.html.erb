<%
  cache(:id => @manifestation.id, :action => :show, :controller => :manifestations, :action_suffix => 'detail_1', :editable => @manifestation.is_updatable_by(current_user), :locale => @locale) do
%>

  <div id="tabview">

<div id="demo" class="yui-navset yui-navset-top">
  <ul class="yui-nav">
