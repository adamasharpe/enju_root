<%- if Twitter.site.user and Twitter.site.password -%>
  <%- form_for(@manifestation, :html => {:method => :put}) do |f| -%>
    <p>
      <%= f.label t('twitter.comment') -%><br />
      <%= f.text_field :twitter_comment, :class => 'twitter_text' -%>
      <%= submit_tag t('twitter.post_to_twitter') -%>
    </p>
  <%- end -%>
<%- end -%>
