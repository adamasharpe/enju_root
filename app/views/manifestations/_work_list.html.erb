<div id="work">
<%- unless @works.blank? -%>
  <%= paginate(@works, :param_name => :work_list_page, :remote => true) -%>
  <ul>
    <%- @works.each do |work| -%>
        <li>[W] <%= link_to work.original_title, work -%>
          <%- work.manifestations.each do |manifestation| -%>
            <%= link_to form_icon(manifestation.carrier_type), manifestation -%>
          <%- end -%>
          <%= patrons_list(work.patrons) -%>
        </li>
    <%- end -%>
  </ul>
  <%= paginate(@works, :param_name => :work_list_page, :remove => true) -%>
<%- end -%>
</div>
