<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.manifestation')), new_manifestation_manifestation_path(@manifestation) -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.manifestation')) -%></h1>
<div id="content_list">
  <h2 class="resource_title">
    [M]
    <%= link_to h(@manifestation.original_title), @manifestation -%>
  </h2>
  <p>
    <%= raw patrons_list(@manifestation.authors) -%>
    <%= raw patrons_list(@manifestation.editors) -%>
    <%= raw patrons_list(@manifestation.patrons) -%>
  </p>

  <%- form_for :manifestations, :url => manifestation_manifestations_path(@manifestation), :html => {:method => 'get'} do -%>
    <p>
      <%= t('page.search_term') -%>:
      <%= text_field_tag 'query', h(@query), {:id => 'query', :class => 'search_form_short'} -%>
      <%- if @manifestation.is_deletable_by(current_user) -%>
        <%- if params[:mode] == 'add' -%>
          <%= radio_button_tag 'mode', 'show' -%> <%= t('page.show') -%>
          <%= radio_button_tag 'mode', 'add', :checked => true -%> <%= t('page.add') -%>
        <%- else -%>
          <%= radio_button_tag 'mode', 'show', :checked => true -%> <%= t('page.show') -%>
          <%= radio_button_tag 'mode', 'add' -%> <%= t('page.add') -%>
        <%- end -%>
        <!--
        <%= check_box_tag 'subscription_master', true, @subscription_master -%> <%= t('activerecord.attributes.manifestation.subscription_master') -%>
        -->
      <%- end -%>
      <%= submit_tag t('page.search') -%>
      <!--
      <%= link_to h(t('page.advanced_search')), '/page/advanced_search' -%>
      -->
      <%= link_to t('page.back_to_index'), manifestation_manifestations_path(@manifestation) -%>
    </p>
    <%= javascript_tag("$('query').focus()") -%>
  <%- end -%>

<table class="index">
  <tr>
    <th><%= t('page.title') -%></th>
    <th></th>
    <th></th>
  </tr>
  <%- for manifestation in @manifestations -%>
    <tr class="line<%= cycle("0", "1") -%>">
      <td>
        <%= render :partial => 'manifestations/show_index', :locals => {:manifestation => manifestation} -%>
        <%= render :partial => 'manifestations/holding', :locals => {:manifestation => manifestation} -%>
      </td>
      <%- if manifestation.is_deletable_by(current_user) -%>
        <td><%= link_to t('page.edit'), edit_manifestation_path(manifestation) -%></td>
        <td>
          <%- if params[:mode] == "add" -%>
            <%= link_to t('page.add'), new_manifestation_manifestation_has_manifestation_path(@manifestation, :to_manifestation_id => manifestation.id) unless @manifestation.derived_manifestations.include?(manifestation) or @manifestation == manifestation -%>
          <%- else -%>
            <%- manifestation_has_manifestation = @manifestation.to_manifestations.find_by_to_manifestation_id(manifestation.id) -%>
            <%= link_to t('page.destroy'), manifestation_has_manifestation, :confirm => t('page.are_you_sure'), :method => :delete if manifestation_has_manifestation -%>
          <%- end -%>
        </td>
      <%- end -%>
    </tr>
  <%- end -%>
</table>

<%= will_paginate(@manifestations, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>
