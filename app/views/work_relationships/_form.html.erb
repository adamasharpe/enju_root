<%= form_for(@work_relationship) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label t('activerecord.attributes.work_relationship.parent') -%><br />
    <%- if @work_relationship.parent -%>
      <%= link_to @work_relationship.parent.original_title, @work_relationship.parent -%>
      <%= f.hidden_field :parent_id -%>
    <%- else -%>
      <%= f.text_field :parent_id -%>
    <%- end -%>
  </div>
  <div class="field">
    <%= f.label t('activerecord.attributes.work_relationship.child') -%><br />
    <%- if @work_relationship.child -%>
      <%= link_to @work_relationship.child.original_title, @work_relationship.child -%>
      <%= f.hidden_field :child_id -%>
    <%- else -%>
      <%= f.text_field :child_id -%>
    <%- end -%>
  </div>
  <div class="field">
    <%= f.label t('activerecord.models.work_relationship_type') -%><br />
    <%= f.select(:work_relationship_type_id, @work_relationship_types.collect{|r| [r.display_name.localize, r.id]}) -%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>
