<%= form_for(@carrier_type) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label t('activerecord.attributes.carrier_type.name') -%><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.attributes.carrier_type.display_name') -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.attributes.carrier_type.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.submit %>
  </div>
<%- end -%>
<%= javascript_tag("$('#carrier_type_name').focus()") -%>
