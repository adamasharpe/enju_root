<div id="sidebar">
  <ul>
    <li><%= link_to t('page.show'), @circulation_status -%></li>
    <li><%= link_to t('page.back'), circulation_statuses_path -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.circulation_status')) -%></h1>
<div class="inner">

<%= error_messages_for :circulation_status -%>

<%- form_for(@circulation_status) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.circulation_status.display_name') -%></b><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.circulation_status.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
