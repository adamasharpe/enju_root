<div id="submenu">
  <ul>
    <li><%= link_to t('show'), @circulation_status -%></li>
    <li><%= link_to ('Back'), circulation_statuses_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing circulation_status') -%></h1>

<%= error_messages_for :circulation_status -%>

<%- form_for(@circulation_status) do |f| -%>
  <p>
    <b><%= ('Name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= ('Display name') -%></b><br />
    <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('update') -%>
  </p>
<%- end -%>

</div>
