<div id="submenu">
  <ul>
    <li><%= link_to t('page.edit'), edit_place_path(@place) -%></li>
    <li><%= link_to t('page.destroy'), place_path(@place), :confirm => t('page.are_you_sure'), :method => :delete -%></li>
    <%- if flash[:query] -%>
      <li><%= link_to t('page.back'), places_path(:query => flash[:query]) -%></li>
    <%- else -%>
      <li><%= link_to t('page.back'), places_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
<p>
  <b><%= t('activerecord.attributes.place.term') -%>:</b>
  <%=h @place.term %>
</p>

<p>
  <b><%= t('activerecord.attributes.place.note') -%>:</b>
  <%=h @place.note %>
</p>

<table id="index">
  <tr>
    <th><%= t('activerecord.attributes.classification.category') -%></th>
    <th><%= t('activerecord.models.classification_type') -%></th>
  </tr>
  <%- @place.classifications.each do |classification| -%>
  <tr>
    <td><%= link_to h(classification.category), classification -%></td>
    <td><%= link_to h(classification.classification_type.name), classification.classification_type -%></td>
  </tr>
  <%- end -%>
</table>
</div>
