<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), library_shelves_path(@shelf.library.name) -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.shelf')) -%></h1>
<div id="content_list">

<%= error_messages_for :shelf -%>

<%- form_for(@shelf) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.shelf.name') -%></b><br />
    <%= f.text_area :name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.shelf.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <%- if current_user.has_role?('Librarian') -%>
    <p>
      <b><%= t('page.library') -%></b><br />
      <select id="library_id" name="library_id">
        <%= options_from_collection_for_select(@libraries, "name", "display_name", @shelf.library.name) -%>
      </select>
    </p>
  <%- end -%>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>
</div>
</div>
