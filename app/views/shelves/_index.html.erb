<div id="submenu">
  <ul>
    <%- if_authorized?(:new, Shelf) do -%>
      <li><%= link_to ('New shelf'), new_shelf_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Listing shelves') -%></h1>

<table style="width: 100%">
  <tr>
    <th><%= ('Name') -%></th>
    <th><%= ('Library') -%></th>
  </tr>
  
<%- @shelves.each_with_index do |shelf, i| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(shelf.name), shelf_path(shelf) -%></td>
    <td><%= link_to h(shelf.library.name), library_path(shelf.library.short_name) -%></td>
    <%- if_authorized?(:destroy, shelf) do -%>
      <td><%= link_to t('edit'), edit_shelf_path(shelf) -%></td>
      <td><%= link_to t('destroy'), shelf_path(shelf), :confirm => ('Are you sure?'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<br />
<%= will_paginate(@shelves) -%>
</div>
