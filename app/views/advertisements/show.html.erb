<div id="sidebar">
  <ul>
    <li><%= link_to t('page.edit'), edit_advertisement_path(@advertisement) -%></li>
    <li><%= link_to t('page.back'), advertisements_path -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.advertisement')) -%></h1>
<div class="inner">
<p>
  <b><%= t('activerecord.attributes.advertisement.title') -%>:</b>
  <%=h @advertisement.title -%>
</p>

<p>
  <b><%= t('activerecord.attributes.advertisement.url') -%>:</b>
  <%= link_to h(@advertisement.url), @advertisement.url -%>
</p>

<p>
  <b><%= t('activerecord.attributes.advertisement.body') -%>:</b>
  <%=h @advertisement.body -%>
</p>

<p>
  <b><%= t('activerecord.attributes.advertisement.started_at') -%>:</b>
  <%= l(@advertisement.started_at) if @advertisement.started_at -%>
</p>

<p>
  <b><%= t('activerecord.attributes.advertisement.ended_at') -%>:</b>
  <%= l(@advertisement.ended_at) if @advertisement.ended_at -%>
</p>

<p>
  <b><%= t('activerecord.attributes.advertisement.note') -%>:</b>
  <%=h @advertisement.note -%>
</p>

</div>
</div>
