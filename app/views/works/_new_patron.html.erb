div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.work')) -%></h1>
<div id="content_list">

<%= form_for(:work, :url => patron_works_path(@patron)) do |f| -%>
  <%= f.error_messages -%>  
  
  <p>
    <%= f.label t('page.title') -%><br />
    <%= f.text_field :original_title, :class => 'resource_title' -%>
  </p>
  
  <p>
    <%= f.label t('activerecord.attributes.work.title_transcription') -%><br />
    <%= f.text_field :title_transcription, :class => 'resource_title' -%>
  </p>
  
  <%- unless @patron.blank? -%>
  <p>
    <%= f.label ('Creator') -%><br />
    <%= link_to h(@patron.full_name), @patron -%>
  </p>
  <%- end -%>

  <p>
    <%= f.label t('activerecord.attributes.work.context') -%><br />
    <%= f.text_area :context, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= submit_tag t('page.create') -%>
  </p>
  <%= javascript_tag("$('#work_original_title').focus()") -%>
<%- end -%>
</div>
</div>

div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.back'), patron_works_path(@patron) -%></li>
  </ul>
</div>
