<div class="work">
  <ul>
    <%- @work.from_works.each do |work_has_work| -%>
      <li>
        [W]
        (<%= h(work_has_work.work_relationship_type.display_name.localize) -%>)
        <%= link_to h(work_has_work.from_work.original_title), work_has_work.from_work -%>
        <%= raw patrons_list(work_has_work.from_work.patrons) -%>
        <%- unless work_has_work.from_work.expressions.blank? -%>
          <ul>
            <%- work_has_work.from_work.expressions.each do |expression| -%>
              <li>
              [E]
              <%= link_to h(expression.original_title), expression -%>
              <%= raw patrons_list(expression.patrons) -%>
              </li>
            <%- end -%>
          </ul>
        <%- end -%>
      </li>
    <%- end -%>
    <%- @work.to_works.each do |work_has_work| -%>
      <li>
        [W]
        (<%= h(work_has_work.work_relationship_type.display_name.localize) -%>)
        <%= link_to h(work_has_work.to_work.original_title), work_has_work.to_work -%>
        <%= raw patrons_list(work_has_work.to_work.patrons) -%>
        <%- unless work_has_work.to_work.expressions.blank? -%>
          <ul>
            <%- work_has_work.to_work.expressions.each do |expression| -%>
              <li>
              [E]
              <%= link_to h(expression.original_title), expression -%>
              <%= raw patrons_list(expression.patrons) -%>
              </li>
            <%- end -%>
          </ul>
        <%- end -%>
      </li>
    <%- end -%>
  </ul>
</div>
