<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.series_statement')) -%></h1>
<div id="content_list">
<%- form_for :series_statements, :url => series_statements_path, :html => {:method => 'get'} do -%>
  <p>
    <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query), {:class => 'search_form'} -%>
    <%= submit_tag t('page.search') -%>
  </p>
  <%= javascript_tag("$('query').focus()") -%>
<%- end -%>
<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.series_statement.original_title') -%></th>
    <th><%= t('activerecord.attributes.series_statement.numbering') -%></th>
    <th><%= t('activerecord.attributes.series_statement.title_subseries') -%></th>
    <th><%= t('activerecord.attributes.series_statement.numbering_subseries') -%></th>
    <th></th>
    <th></th>
  </tr>

<% @series_statements.each do |series_statement| %>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if series_statement.is_deletable_by(current_user) -%>
        <%= move_position(series_statement) -%>
      <%- end -%>
    </td>
    <td><%= link_to h(series_statement.original_title), series_statement %></td>
    <td><%= series_statement.numbering %></td>
    <td><%= series_statement.title_subseries %></td>
    <td><%= series_statement.numbering_subseries %></td>
    <td>
      <%- if series_statement.work -%>
        <%= link_to h(series_statement.work.original_title), series_statement.work -%>
      <%- else -%>
        (<%= link_to t('page.new', :model => t('activerecord.models.work')), new_series_statement_work_path(series_statement) -%>)
      <%- end -%>
    </td>
    <td>
      <%- if series_statement.work -%>
        <%= link_to t('page.new', :model => t('activerecord.models.manifestation')), new_series_statement_manifestation_path(series_statement) -%></td>
      <%- end -%>
    </td>
    <td><%= link_to t('page.edit'), edit_series_statement_path(series_statement) %></td>
    <td><%= link_to t('page.destroy'), series_statement, :confirm => t('page.are_you_sure'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate(@series_statements) -%>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.series_statement')), new_series_statement_path -%></li>
  </ul>
</div>
