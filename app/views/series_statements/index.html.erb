<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.series_statement')) -%></h1>
<div id="content_list">
<table class="index">
  <tr>
    <th>Title</th>
    <th>Numbering</th>
    <th>Title subseries</th>
    <th>Numbering subseries</th>
  </tr>

<% @series_statements.each do |series_statement| %>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%=h series_statement.title %></td>
    <td><%=h series_statement.numbering %></td>
    <td><%=h series_statement.title_subseries %></td>
    <td><%=h series_statement.numbering_subseries %></td>
    <td><%= link_to t('page.show'), series_statement %></td>
    <td><%= link_to t('page.edit'), edit_series_statement_path(series_statement) %></td>
    <td><%= link_to t('page.destroy'), series_statement, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate(@series_statements) -%>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to 'New series_statement', new_series_statement_path %></li>
  </ul>
</div>
