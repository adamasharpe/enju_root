<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.series_statement')) -%></h1>
<div id="content_list">

<% form_for(@series_statement) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label t('activerecord.attributes.series_statement.title') -%><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.series_statement.numbering') -%><br />
    <%= f.text_field :numbering %>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.series_statement.title_subseries') -%><br />
    <%= f.text_field :title_subseries %>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.series_statement.numbering_subseries') -%><br />
    <%= f.text_field :numbering_subseries %>
  </p>
  <p>
    <%= f.submit t('page.update') %>
  </p>
<% end %>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @series_statement %></li>
    <li><%= link_to t('page.back'), series_statements_path %></li>
  </ul>
</div>
