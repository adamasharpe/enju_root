<div class="header_and_footer">
  <%- cache(:controller => 'library_groups', :id => LibraryGroup.site_config.id, :action_suffix => 'header', :locale => @locale) do -%>
    <div id="header_left">
      <h2><a href="/" title="<%= LibraryGroup.site_config.display_name.localize -%>"><%= LibraryGroup.site_config.display_name.localize -%></a></h2>
    </div>
  <%- end -%>

  <%= render :partial => 'advertisements/header' -%>
  <%= render :partial => 'page/select_locale' -%>

  <div id="header_right">
    <%- if logged_in? -%>
      <%- cache :controller => 'users', :action => 'show', :id => current_user.login, :locale => @locale do -%>
        <%= t('page.logged_in_as', :login_name => current_user.login) -%>
        <br />
        <%= link_to t('page.account'), edit_user_path(current_user.login) -%>
        <%= link_to t('page.logout'), '/logout' -%>
      <%- end -%>
    <%- else -%>
      <%- unless controller.controller_name == 'user_sessions' -%>
        <%= link_to t('page.login'), new_user_session_path -%>
        <%- unless controller.controller_name == 'users' and controller.action_name == 'new' -%>
          (<%= link_to t('user.sign_up'), new_user_path -%>)
        <%- end -%>
      <%- end -%>
    <%- end -%>
  </div>
</div>
