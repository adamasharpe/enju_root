<%= form_for(@event_category) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label t('activerecord.attributes.event_category.name') -%><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.attributes.event_category.display_name') -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.attributes.event_category.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.submit %>
  </div>
<%- end -%>
