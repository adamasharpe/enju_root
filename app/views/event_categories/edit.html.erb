<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @event_category -%></li>
    <li><%= link_to t('page.back'), event_categories_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= t('page.editing', :model => t('activerecord.models.event_category')) -%></h1>

<%= error_messages_for :event_category -%>

<%- form_for(@event_category) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.event_category.name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.event_category.display_name') -%></b><br />
    <%= f.text_field :display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.event_category.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
