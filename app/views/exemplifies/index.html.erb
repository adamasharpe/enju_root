<h1><%= ('Listing exemplifies') -%></h1>

<table id="index">
  <tr>
    <th><%= t('activerecord.models.manifestation') -%></th>
    <th><%= t('activerecord.models.item') -%></th>
  </tr>

<%- for exemplify in @exemplifies -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(exemplify.manifestation.original_title), manifestation_path(exemplify.manifestation) -%></td>
    <td><%= link_to h(exemplify.item.item_identifier), item_path(exemplify.item) -%></td>
    <%- if_authorized?(:destroy, exemplify) do -%>
      <td><%= link_to t('page.show'), exemplify -%></td>
      <td><%= link_to t('page.destroy'), exemplify, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%- if_authorized?(:new, Exemplify) do -%>
  <p><%= link_to ('New exemplify'), new_exemplify_path -%></p>
<%- end -%>

<%= will_paginate(@exemplifies, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
