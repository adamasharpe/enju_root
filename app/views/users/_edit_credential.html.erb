  <div id="left_pane_detail">

  <p>
    <%= f.label t('activerecord.attributes.user.username') -%><br />
    <%= @user.username -%>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.user.email') -%><br />
    <%= f.text_field :email, :class => 'resource_email' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.user.email_confirmation') -%><br />
    <%= f.text_field :email_confirmation, :class => 'resource_email' -%>
  </p>

  <%- if user_signed_in? == @user -%>
    <p>
      <%= f.label t('page.password') -%><br />
      <table>
        <tr>
          <td><%= t('user.current_password') -%>:</td>
          <td><%= f.password_field :old_password, :value => '' -%></td>
        </tr>
        <tr>
          <td><%= t('user.new_password') -%>:</td>
          <td><%= f.password_field :password, :value => '' -%></td>
        </tr>
        <tr>
          <td><%= t('user.repeat_new_password') -%>:</td>
          <td><%= f.password_field :password_confirmation, :value => '' -%></td>
        </tr>
      </table>
    </p>
  <%- end -%>

  <p>
    <%= f.label t('activerecord.attributes.user.openid_identifier') -%><br />
    <%= f.text_field :openid_identifier, :class => 'resource_email' -%>
  </p>

  <%- if current_user.has_role?('Librarian') and current_user != @user -%>
    <p>
      <%= f.label t('user.set_auto_generated_password') -%>
      <%= f.check_box :auto_generated_password -%>
    </p>
  <%- end -%>

  <p>
    <%= f.label t('activerecord.attributes.user.expired_at') -%><br />
    <%- if current_user.has_role?('Librarian') -%>
      <%= f.date_select :expired_at, :include_blank => true -%>
    <%- else -%>
      <%= l(@user.expired_at) if @user.expired_at -%>
    <%- end -%>
  </p>
  
  <p>
    <%= f.label t('activerecord.attributes.user.active') -%>
    <%- if @user.check_update_own_account(current_user) -%>
      <%= f.check_box :active, :disabled => 'disabled' -%>
    <%- else -%>
      <%= f.check_box :active -%>
    <%- end -%>
  </p>

  </div>

  <div id="right_pane_detail">
  <%- if current_user.has_role?('Librarian') -%>
    <p>
      <%= f.label t('activerecord.models.user_group') -%><br />
      <%= f.select(:user_group_id, @user_groups.collect{|u| [u.name, u.id]}) -%>
    </p>
  <%- end -%>

  <%- if current_user.has_role?('Administrator') -%>
    <p>
      <%= f.label t('activerecord.models.role') -%><br />
      <select id="user_role_id" name="user[role_id]">
      <%= options_from_collection_for_select(@roles, "id", "localized_name", @user_role_id) -%>
      </select>
    </p>
  <%- end -%>

    <p>
      <%= f.label t('activerecord.attributes.user.user_number') -%><br />
      <%- if current_user.has_role?('Librarian') -%>
        <%= f.text_field :user_number, :class => 'resource_user_number' -%>
      <%- else -%>
        <%= @user.user_number -%>
      <%- end -%>
    </p>

  <%- if current_user.has_role?('Librarian') -%>
    <p>
      <%= f.label t('activerecord.models.library') -%><br />
      <%= f.select(:library_id, @libraries.collect{|l| [l.display_name.localize, l.id]}) -%>
    </p>

    <p>
      <%= f.label t('role.required_role') -%><br />
      <%= f.select(:required_role_id, @roles.collect{|r| [r.display_name.localize, r.id]}) -%>
    </p>
  <%- end -%>
  <p>
    <%= f.label t('activerecord.attributes.user.locale') -%><br />
    <%= f.select(:locale, @available_languages.collect{|language| [language.display_name.localize, language.iso_639_1]}) -%>
  </p>
  </div>
