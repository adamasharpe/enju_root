<%- if @user.checkout_icalendar_token.present? -%>
  <%= checkouts_url(:icalendar_token => @user.checkout_icalendar_token, :format => :ics) -%>
  <%= hidden_field_tag 'user[checkout_icalendar_token]', @user.checkout_icalendar_token -%>
<%- end -%>
<br />
<%- if @user.checkout_icalendar_token.present? -%>
  <%= button_to_remote t('page.delete'), :update => 'feed_token', :url => edit_user_path(@user.login, :mode => 'feed_token', :disable => true), :method => :get -%>
  <br />
  <%= t('user.you_have_to_save_profile_to_activate_feed_url') -%>
<%- else -%>
  <%= button_to_remote t('page.reset'), :update => 'feed_token', :url => edit_user_path(@user.login, :mode => 'feed_token'), :method => :get -%>
  <br />
  <%= t('user.you_have_to_save_profile_to_deactivate_feed_url') -%>
<%- end -%>

