<div id="sidebar">
  <ul>
    <li><%= link_to t('page.back'), h(session[:return_to]) -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.bookmark')) -%></h1>
<div class="inner">

<%= error_messages_for :bookmark -%>

<%if logged_in? -%>
  <%- form_for(:bookmark, :url => user_bookmarks_path(@user.login)) do |f| -%>
  <p>
    <b><%= t('page.title') -%></b><br />
    <%= f.text_field :title, :value => h(@title), :class => 'resource_title' -%>
  </p>
  
  <p>
  <b><%= t('activerecord.attributes.bookmarked_resource.url') -%></b><br />
  <%- if params[:url] -%>
    <%= link_to h(params[:url]), h(params[:url]) -%>
    <%= f.hidden_field :url, :value => h(params[:url]), :class => 'resource_url' -%>
  <%- else -%>
    <%= f.text_field :url, :value => h(params[:url]), :class => 'resource_url' -%>
  <%- end -%>
  </p>
  
  <p>
  <b><%= t('page.tag') -%></b><br />
    <%= f.text_field :tag_list -%>
  </p>
  
  <p>
    <b><%= t('activerecord.attributes.bookmark.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
  <%- end -%>
  <%= javascript_tag("$('bookmark_tag_list').focus()") -%>
<%- end -%>
</div>
</div>
