<div id="sidebar">
  <ul>
    <li><%= link_to t('page.show'), @patron_relationship_type -%></li>
    <li><%= link_to t('page.back'), patron_relationship_types_path -%></li>
  </ul>
</div>

<div class="inner">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.patron_relationship_type')) -%></h1>
<div class="inner">

<%- form_for(@patron_relationship_type) do |f| -%>
  <%= f.error_messages -%>
  <p>
    <%= f.label t('activerecord.attributes.patron_relationship_type.name') -%><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.patron_relationship_type.display_name') -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.patron_relationship_type.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>
  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
