<div id="submenu">
  <ul>
    <%- if @create.patron -%>
    <li><%= link_to ('Back to works'), patron_works_path(@create.patron) -%></li>
    <%- end -%>
    <%- if @create.work -%>
    <li><%= link_to ('Back to patrons'), work_patrons_path(@create.work) -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
<h1><%= t('page.new', :model => t('activerecord.models.create')) -%></h1>

<%= error_messages_for :create -%>

<%- form_for(:create, :url => creates_path) do |f| -%>
  <p>
  <b><%= t('activerecord.models.patron') -%></b><br />
    <%- if @create.patron -%>
		  <%= link_to h(@create.patron.full_name), @create.patron -%>
      <%= f.hidden_field :patron_id -%>
    <%- else -%>
      <%= f.text_field :patron_id -%>
    <%- end -%>
  </p>

  <p>
  <b><%= t('activerecord.models.work') -%></b><br />
    <%- if @create.work -%>
		  <%= link_to h(@work.original_title), @create.work -%>
      <%= f.hidden_field :work_id -%>
    <%- else -%>
      <%= f.text_field :work_id -%>
    <%- end -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
