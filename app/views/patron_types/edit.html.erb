<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @patron_type -%></li>
    <li><%= link_to t('page.back'), patron_types_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.patron_type')) -%></h1>

<%- form_for(@patron_type) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.attributes.patron_type.name') -%><br />
    <%= f.text_field :name -%>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.patron_type.display_name') -%><br />
    <%= f.text_field :display_name -%>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.patron_type.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>
  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
