<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.patron_type')), new_patron_type_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.patron_type')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.patron_type.name') -%></th>
    <th><%= t('activerecord.attributes.patron_type.display_name') -%></th>
    <th><%= t('activerecord.attributes.patron_type.note') -%></th>
  </tr>

<%- @patron_types.each do |patron_type| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if patron_type.is_deletable_by(current_user) -%>
        <%= patron_type.first? ? image_tag('cross.png', :size => '16x16') : link_to(image_tag('arrow_up.png', :size => '16x16', :alt => t('page.asc')), {:action => 'update', :position  => (patron_type.position  > 1 ? patron_type.position - 1 : 1), :id => patron_type.id}, :method => :put) -%>
        <%= patron_type.last? ? image_tag('cross.png', :size => '16x16') : link_to(image_tag('arrow_down.png', :size => '16x16', :alt => t('page.desc')), {:action => 'update', :position => (patron_type.position + 1), :id => patron_type.id}, :method => :put) -%>
      <%- end -%>
    </td>
    <td><%= link_to h(patron_type.name), patron_type -%></td>
    <td><%= link_to h(patron_type.display_name.localize), patron_type -%></td>
    <td><%=h patron_type.note -%></td>
    <td><%= link_to t('page.edit'), edit_patron_type_path(patron_type) -%></td>
    <td><%= link_to t('page.destroy'), patron_type, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

</div>
</div>
