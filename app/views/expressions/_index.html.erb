<div id="submenu">
  <ul>
    <%- if Expression.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.expression')), new_expression_path -%></li>
    <%- end -%>
  </ul>
</div>
  
<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.expression')) -%></h1>
<div id="content_list">
  <%- if @expression -%>
    <h2>
      [E]
      <%= link_to h(@expression.original_title), @expression -%>
    </h2>
  <%- end -%>
<%- form_for :expressions, :url => expressions_path, :html => {:method => 'get'} do -%>
  <p>
    <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query), :class => 'search_form' -%>
    <%- if params[:view] == 'serial' -%>
      <%= check_box_tag 'view', 'serial', :checked => true -%>
    <%- else -%>
      <%= check_box_tag 'view', 'serial' -%>
    <%- end -%>
    <%= t('page.serial') -%>

    <%= submit_tag t('page.search') -%>
  </p>
  <%= javascript_tag("$('query').focus()") -%>
<%- end -%>

<table class="index">
  <tr>
    <th><%= t('page.title') -%></th>
    <th><%= t('activerecord.models.language') -%></th>
  </tr>
  
  <%- for expression in @expressions -%>
    <tr class="line<%= cycle("0", "1") -%>">
      <td>
        <%= link_to h(expression.original_title), expression -%>
        <%= expression_form_icon(expression.expression_form) -%>
        <br />
        <%= patrons_list(expression.authors, current_user) -%>
      </td>
      <td><%=h expression.language.display_name.localize -%></td>
      <%- if expression.is_deletable_by(current_user) -%>
        <td><%= link_to t('page.edit'), edit_expression_path(expression) -%></td>
        <td><%= link_to t('page.destroy'), expression, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
      <%- end -%>
      <%- if @expression -%>
        <td>
          <%- if expression.is_deletable_by(current_user) -%>
            <%- if params[:mode] == "add" -%>
              <%= link_to t('page.add'), new_expression_expression_has_expression_path(@expression, :to_expression_id => expression.id) unless @expression.derived_expressions.include?(expression) or @expression == expression -%>
            <%- else -%>
              <%- expression_has_expression = @expression.to_expressions.find_by_to_expression_id(expression.id) -%>
              <%= link_to t('page.destroy'), expression_has_expression, :confirm => t('page.are_you_sure'), :method => :delete if expression_has_expression -%>
            <%- end -%>
          <%- end -%>
        </td>
      <%- end -%>
    </tr>
  <%- end -%>
</table>

<%= will_paginate(@expressions, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
</div>
