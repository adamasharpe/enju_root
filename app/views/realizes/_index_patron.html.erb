<div id="sidebar">
  <ul>
    <%- if Realize.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.realize')), new_patron_realize_path(@patron) -%></li>
    <%- end -%>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.realize')) -%></h1>
<div class="inner">
  <h2>
    <%= link_to h(@patron.full_name), @patron -%>
  </h2>
<table>
  <tr>
    <th><%= t('activerecord.models.expression') -%></th>
    <th><%= t('page.created_at') -%></th>
    <th><%= t('page.updated_at') -%></th>
  </tr>

<%- for realize in @realizes -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(realize.expression.original_title), realize.expression -%></td>
    <td><%= l(realize.created_at) -%></td>
    <td><%= l(realize.updated_at) -%></td>
    <%- if realize.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.destroy'), patron_realize_path(@patron, realize), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@realizes, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
</div>
