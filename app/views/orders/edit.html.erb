<div id="sidebar">
  <ul>
    <li><%= link_to t('page.show'), order_path(@order) -%></li>
    <li><%= link_to t('page.back'), orders_path -%></li>
  </ul>
</div>

<div class="inner">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.order')) -%></h1>
<div class="inner">

<%= error_messages_for :order -%>

<%- form_for(@order) do |f| -%>
  <p>
    <b><%= t('activerecord.models.order_list') -%></b><br />
    <%= f.text_field :order_list_id -%>
  </p>

  <p>
    <b><%= t('activerecord.models.purchase_request') -%></b><br />
    <%= f.text_field :purchase_request_id -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
