<% form_for @user_session, :url => user_session_path do |f| %>
  <p><%= f.label t('activerecord.attributes.user.openid_identifier') -%><br/>
  <%= f.text_field :openid_identifier, :class => 'login_password' %></p>

  <p><%= f.label t('user_session.remember_me') -%>
  <%= f.check_box :remember_me %></p>

  <p>
    <%= f.submit t('page.login') %>
  </p>

  <p><%= link_to_remote t('user_session.login_with_username_and_password'), :update => 'submenu', :url => new_user_session_url(:mode => 'password'), :method => :get -%></p>

<% end %>
<%= javascript_tag("$('user_session_openid_identifier').focus()") -%>
