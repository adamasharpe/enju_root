<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @person -%></li>
    <li><%= link_to t('page.back'), persons_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= t('page.editing', :model => t('activerecord.models.person')) -%></h1>

<%= error_messages_for :person -%>

<%- form_for(:person, :url => person_path(@person), :html => { :method => :put }) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.person.full_name') -%></b><br />
    <%= f.text_field :full_name, :class => 'resource_title' -%><br />
    <%= t('activerecord.attributes.person.full_name_transcription') -%><br />
    <%= f.text_field :full_name_transcription, :class => 'resource_title' -%><br />
    <%= t('activerecord.attributes.person.full_name_alternative') -%><br />
    <%= f.text_area :full_name_alternative, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.other_designation') -%></b><br />
    <%= f.text_area :other_designation, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.place') -%></b><br />
    <%= f.text_area :place, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.date_of_birth') -%></b><br />
    <%= f.date_select :date_of_birth, :include_blank => true -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.date_of_death') -%></b><br />
    <%= f.date_select :date_of_death, :include_blank => true -%>
  </p>

  <p>
    <b><%= t('activerecord.models.country') -%></b>
    <%= f.select(:country_id, @countries.collect{|c| [c.display_name, c.id]}) -%>
  </p>

  <p>
    <b><%= t('activerecord.models.language') -%></b>
    <%= f.select(:language_id, @languages.collect{|l| [l.display_name, l.id]}) -%>
  </p>

  <p>
    <b><%= ('Access role') -%></b>
    <%= f.select(:access_role_id, @roles.collect{|r| [r.name, r.id]}) -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <%- if @person.user -%>
  <hr />

  <p>
    <b><%= t('activerecord.attributes.person.zip_code_1') -%></b><br />
    <%= f.text_field :zip_code_1, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.address_1') -%></b><br />
    <%= f.text_area :address_1, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.telephone_number_1') -%></b><br />
    <%= f.text_field :telephone_number_1, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.fax_number_1') -%></b><br />
    <%= f.text_field :fax_number_1, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.address_1_note') -%></b><br />
    <%= f.text_area :address_1_note, :class => 'resource_textarea' -%>
  </p>

  <hr />

  <p>
    <b><%= t('activerecord.attributes.person.zip_code_2') -%></b><br />
    <%= f.text_field :zip_code_2, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.address_2') -%></b><br />
    <%= f.text_area :address_2, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.telephone_number_2') -%></b><br />
    <%= f.text_field :telephone_number_2, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.fax_number_2') -%></b><br />
    <%= f.text_field :fax_number_2, :class => 'resource_telephone_number' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.person.address_2_note') -%></b><br />
    <%= f.text_area :address_2_note, :class => 'resource_textarea' -%>
  </p>

  <%- end -%>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>
</div>
