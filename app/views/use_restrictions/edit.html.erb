<div id="sidebar">
  <ul>
    <li><%= link_to t('page.show'), @use_restriction -%></li>
    <li><%= link_to t('page.back'), use_restrictions_path -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.use_restriction')) -%></h1>
<div class="inner">

<%= error_messages_for :use_restriction -%>

<%- form_for(@use_restriction) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.use_restriction.display_name') -%></b><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.use_restriction.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
