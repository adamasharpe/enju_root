<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.patron')) -%></h1>
<div id="content_list">

  <h2 class="resource_title">
    [W]
    <%= link_to h(@work.original_title), @work -%>
    <%- if @work.series_statement -%>
      (<%= link_to h(@work.series_statement.original_title), @work.series_statement -%>)
    <%- end -%>
  </h2>

<%- form_for :patrons, :url => work_patrons_path(@work), :html => {:method => 'get'} do -%>
  <p>
    <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query), {:id => 'search_form_top', :class => 'search_form'} -%>
    <%- if @work.is_deletable_by(current_user) -%>
      <%- if params[:mode] == 'add' -%>
        <%= radio_button_tag 'mode', 'show' -%> <%= t('page.show') -%>
        <%= radio_button_tag 'mode', 'add', :checked => true -%> <%= t('page.add') -%>
      <%- else -%>
        <%= radio_button_tag 'mode', 'show', :checked => true -%> <%= t('page.show') -%>
        <%= radio_button_tag 'mode', 'add' -%> <%= t('page.add') -%>
      <%- end -%>
    <%- end -%>
    <%= submit_tag t('page.search') -%>
    <%= link_to t('page.back_to_index'), work_patrons_path(@work) -%>
  </p>
  <%= javascript_tag("$('search_form_top').focus()") -%>
<%- end -%>

<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.patron.full_name') -%></th>
    <th><%= t('activerecord.models.patron_type') -%></th>
    <th><%= t('activerecord.attributes.patron.date_of_birth') -%></th>
    <th><%= t('activerecord.attributes.patron.date_of_death') -%></th>
    <th></th>
  </tr>
  
  <%- @patrons.each do |patron| -%>
    <tr class="line<%= cycle("0", "1") -%>">
      <td><%= link_to h(patron.full_name), patron -%></td>
      <td><%= patron.patron_type.display_name.localize -%></td>
      <td><%=l patron.date_of_birth if patron.date_of_birth -%></td>
      <td><%=l patron.date_of_death if patron.date_of_death -%></td>
      <td>
        <%- if patron.is_deletable_by(current_user) -%>
          <%- if params[:mode] == 'add' -%>
            <%= link_to t('page.add'), new_work_create_path(@work, :patron_id => patron.id) unless @work.patrons.include?(patron) -%>
          <%- else -%>
            <%= link_to t('page.destroy'), work_create_path(@work, @work.created(patron)), :confirm => t('page.are_you_sure'), :method => :delete -%>
          <%- end -%>
        <%- end -%>
      </td>
    </tr>
  <%- end -%>
</table>

<%= will_paginate(@patrons, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>

<div id="submenu">
  <ul>
    <%- if Patron.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.patron')), new_work_patron_path(@work) -%></li>
    <%- end -%>
    <li><%= link_to t('page.listing', :model => t('activerecord.models.expression')), work_expressions_path(@work) -%></li>
  </ul>
</div>
