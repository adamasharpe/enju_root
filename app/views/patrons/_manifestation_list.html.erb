<div id="manifestation">
  <ul>
    <%- manifestations.each do |manifestation| -%>
      <li>
        [M]
        <%= link_to h(manifestation.original_title), manifestation -%>
        <%= form_icon(manifestation.carrier_type) -%>
        <%= raw patrons_list(manifestation.authors) -%>
        <%= raw patrons_list(manifestation.patrons) -%>
        <%- if manifestation.date_of_publication -%>
          (<%= manifestation.date_of_publication.strftime('%Y') -%>)
        <%- end -%>
      </li>
    <%- end -%>
  </ul>
  <%= will_paginate(manifestations, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next'), :param_name => :manifestation_list_page, :class => 'content_pagination') -%>
</div>
