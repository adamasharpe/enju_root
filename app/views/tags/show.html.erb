<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), :back -%></li>
    <li><%= link_to t('page.edit'), edit_tag_path(@tag.name) -%></li>
    <li><%= link_to t('page.search_resource', :model => t('activerecord.models.manifestation')), manifestations_path(:tag => h(@tag.name)) -%></li>
    <%- if logged_in? -%>
      <li><%= link_to t('page.search_resource', :model => t('activerecord.models.bookmark')), user_bookmarks_path(current_user.login, :tag => h(@tag.name)) -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
  <h1 class="title"><%= t('page.showing', :model => t('activerecord.models.tag')) -%></h1>
  <div id="content_list">
    <h2 id="resource_title">
      [T]
      <%= @tag.name -%>
    </h2>

    <p>
      (<%= link_to_wikipedia(@tag.name) -%>)
    </p>

    <p>
      <strong><%= t('activerecord.attributes.tag.taggings_count') -%>:</strong>
      <%= @tag.taggings_count -%>
      (<%= link_to t('page.search'), manifestations_path(:tag => @tag.name) -%>)
    </p>

    <p>
      <stront><%= t('page.created_at') -%>:</strong>
      <%= l(@tag.created_at) -%>
    </p>

  </div>
</div>
