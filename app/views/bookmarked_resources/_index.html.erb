<div class="inner">
  <h1 class="title"><%= t('page.listing', :model => t('activerecord.models.bookmarked_resource')) -%></h1>

  <div class="inner">
<%- form_for :bookmarks, :url => bookmarked_resources_path, :html => {:method => 'get'} do -%>
  <p>
    <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query), {:id => 'search_form_top', :class => 'search_form'} -%>
    <%= submit_tag t('page.search') -%>
  </p>
  <%= javascript_tag("$('search_form_top').focus()") -%>
<%- end -%>

<table class="index">
  <tr>
    <th></th>
    <th><%= t('page.title') -%></th>
    <th><%= t('page.created_at') -%></th>
    <th></th>
  </tr>
  <%- @bookmarked_resources.each_with_index do |manifestation, i| -%>
    <tr class="line<%= cycle("0", "1") -%>">
      <td><%= itemnum = @bookmarked_resources.offset + 1 + i -%></td>
      <td>
        <%= link_to h(manifestation.original_title), manifestation -%>
        <br />
        <%- manifestation.tags.each do |tag| -%>
          <%= link_to h(tag.name), tag_path(tag.name) -%>
        <%- end -%>
      </td>
      <td><%= l(manifestation.created_at) -%></td>
      <td><%= link_to t('page.show'), bookmarked_resource_path(manifestation.bookmarked_resource) if manifestation.bookmarked_resource -%></td>
    </tr>
  <%- end -%>
</table>

<%= will_paginate(@bookmarked_resources, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

  </div>
</div>

<div id="sidebar">
  <p>
    <%= link_to (image_tag 'feed-icon-14x14.png', :size => '14x14', :alt => 'RSS', :border => 0), bookmarked_resources_path(:format => :rss) -%>
    (<%= link_to 'RSS', bookmarked_resources_path(:format => :rss) -%>)
    (<%= link_to 'CSV', bookmarked_resources_path(:format => :csv, :locale => @locale) -%>)
  </p>
  <%- if logged_in? -%>
    <h4><%= t('page.bookmarklet') -%></h4>
    <ul>
      <li><a href="javascript:window.location.href='<%=h new_user_bookmark_url(current_user.login) -%>?url='+encodeURIComponent(location.href)+'&title='+encodeURIComponent(document.title);"><%= t('bookmarked_resource.add_to_library_bookmark') -%></a></li>
    </ul>
  <%- end -%>
</div>
