<div id="sidebar">
  <ul>
    <li><%= link_to t('page.back'), order_lists_path -%></li>
  </ul>
</div>

<div class="inner">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.order_list')) -%></h1>
<div class="inner">

<%- form_for(@order_list) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.attributes.order_list.title') -%><br />
    <%= f.text_field :title, :class => 'resource_title' -%>
  </p>
  <p>
    <b><%= t('activerecord.models.bookstore') -%></b><br />
    <%= f.select(:bookstore_id, @bookstores.collect{|b| [b.name, b.id]}) -%>
  </p>
  <p>
    <%= f.label t('activerecord.attributes.order_list.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>
  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>
