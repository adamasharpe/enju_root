<div id="sidebar">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.order_list')), new_order_list_path -%></li>
  </ul>
</div>

<div class="inner">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.order_list')) -%></h1>
<div class="inner">

<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.order_list.title') -%></th>
    <th><%= t('activerecord.models.bookstore') -%></th>
    <th><%= t('activerecord.attributes.order_list.note') -%></th>
  </tr>

<%- for order_list in @order_lists -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(order_list.title), order_list -%></td>
    <td><%= link_to h(order_list.bookstore.name), order_list.bookstore -%></td>
    <td><%=h order_list.note -%></td>
    <td><%= link_to t('page.edit'), edit_order_list_path(order_list) -%></td>
    <td><%= link_to t('page.destroy'), order_list, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@order_lists, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
</div>
