<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), countries_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.country')) -%></h1>
<div id="content_list">

<%= error_messages_for :country -%>

<%- form_for(@country) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.country.name') -%></b><br />
    <%= f.text_field :name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.country.display_name') -%></b><br />
    <%= f.text_field :display_name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.country.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>
