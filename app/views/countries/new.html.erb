<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.country')) -%></h1>
<div id="content_list">

<%= form_for(@country) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.attributes.country.name') -%><br />
    <%= f.text_area :name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.country.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), countries_path -%></li>
  </ul>
</div>
