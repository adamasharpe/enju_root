<div id="sidebar">
  <ul>
    <li><%= link_to t('page.show'), @country -%></li>
    <li><%= link_to t('page.back'), countries_path -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.country')) -%></h1>
<div class="inner">

<%= error_messages_for :country -%>

<%- form_for(@country) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.country.name') -%></b><br />
    <%= f.text_area :name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.country.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
