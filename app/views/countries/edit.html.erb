<div id="submenu">
  <ul>
    <li><%= link_to t('show'), @country -%></li>
    <li><%= link_to ('Back'), countries_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing country') -%></h1>

<%= error_messages_for :country -%>

<%- form_for(@country) do |f| -%>
  <p>
    <b><%= ('Name') -%></b><br />
    <%=h @country.name -%>
  </p>

  <p>
    <b><%= ('Display name') -%></b><br />
    <%= f.text_field :display_name -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('update') -%>
  </p>
<%- end -%>

</div>
