<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.subject_has_classification')), new_subject_has_classification_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.subject_has_classification')) -%></h1>

<table id="index">
  <tr>
    <th><%= t('activerecord.models.subject') -%></th>
    <th><%= t('activerecord.models.classification') -%></th>
  </tr>

<%- for subject_has_classification in @subject_has_classifications -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(subject_has_classification.subject.term), subject_has_classification.subject -%></td>
    <td><%= link_to h(subject_has_classification.classification.category), subject_has_classification.classification -%></td>
    <td><%= link_to t('page.show'), subject_has_classification -%></td>
    <td><%= link_to t('page.edit'), edit_subject_has_classification_path(subject_has_classification) -%></td>
    <td><%= link_to t('page.destroy'), subject_has_classification, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@subject_has_classifications, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
