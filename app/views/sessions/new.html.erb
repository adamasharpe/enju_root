<% form_for resource_name, resource, :url => session_path(resource_name) do |f| -%>
<div id="content_detail">
<h1 class="title"><%= t('devise.sessions.user.link') -%> : Project Next-L Enju</h1>
<div id="content_list">
  <%= raw sanitize(textilize(h(@library_group.login_banner))) %>

</div>
</div>

<div id="submenu">
  <p>
    <%= f.label t('activerecord.attributes.user.username') %><br />
    <%= f.text_field :username, :class => 'login_password' %>
  </p>

  <p>
    <%= f.label t('page.password') %><br />
    <%= f.password_field :password, :class => 'login_password' %>
  </p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label t('user_session.remember_me') %></p>
  <% end -%>

  <p><%= f.submit t('devise.sessions.user.link') %></p>

<%= javascript_tag("$('user_username').focus()") -%>

<%= render :partial => "shared/devise_links" %>
<!--
<%=  link_to 'Twitter Authentication', root_path(:warden_oauth_provider => 'twitter') -%>
-->
</div>
<% end -%>
