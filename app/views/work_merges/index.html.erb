<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.work_merge')) -%></h1>
<div id="content_list">

<table class="table table-striped index">
  <tr>
    <td><%= t('activerecord.models.work') -%></td>
    <td><%= t('activerecord.models.work_merge_list') -%></td>
  </tr>

<%- @work_merges.each do |work_merge| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to work_merge.work.original_title, work_path(work_merge.work) -%></td>
    <td><%= link_to work_merge.work_merge_list.title, work_merge_list_path(work_merge.work_merge_list) -%></td>
    <td><%= link_to t('page.show'), work_merge -%></td>
    <td><%= link_to t('page.edit'), edit_work_merge_path(work_merge) -%></td>
    <td><%= link_to t('page.destroy'), work_merge, :data => {:confirm => t('page.are_you_sure')}, :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

<%= paginate(@work_merges) -%>
</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <%- if @work_merge_list -%>
      <li><%= link_to t('page.add', :model => t('activerecord.models.work')), work_merge_list_works_path(@work_merge_list) -%></li>
    <%- end -%>
  </ul>
</div>
