<div id="submenu">
  <ul>
    <%- if @library -%>
      <li><%= link_to t('page.back'), library_events_path(@library.name) -%></li>
    <%- else -%>
      <li><%= link_to t('page.back'), events_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.event')) -%></h1>
<div id="content_list">

<%= error_messages_for :event -%>

<%- form_for(@event) do |f| -%>
  <p>
    <b><%= t('activerecord.models.event_category') -%></b><br />
    <%= f.select(:event_category_id, @event_categories.collect{|e| [e.display_name.localize, e.id]}) -%>
  </p>

  <p>
    <b><%= t('activerecord.models.library') -%></b><br />
    <%= f.select(:library_id, @libraries.collect{|l| [l.display_name.localize, l.id]}) -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.event.title') -%></b><br />
    <%= f.text_area :title, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.event.started_at') -%></b><br />
    <%= f.datetime_select :started_at, :use_month_numbers => true -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.event.ended_at') -%></b><br />
    <%= f.datetime_select :ended_at, :use_month_numbers => true -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.event.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>
</div>
</div>
