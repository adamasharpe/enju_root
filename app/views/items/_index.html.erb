<div id="submenu">
  <ul>
    <%- if Item.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.item')), :controller => 'items', :action => 'new', :manifestation_id => params[:manifestation_id] -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">

  <%- if @manifestation -%>
    <%= render :partial => 'manifestations/title', :locals => {:manifestation => @manifestation} -%>
  <%- else -%>
    <h1 class="title"><%= t('page.listing', :model => t('activerecord.models.item')) -%></h1>
  <%- end -%>
<div id="content_list">

<%- form_for :items, :url => items_path, :html => {:method => 'get'} do -%>
  <p>
  <%= t('page.search_term') -%>: <%= text_field_tag 'query', h(@query), :class => 'search_form' -%>
    <%= submit_tag t('page.search') -%>
  </p>
<%- end -%>

<table id="index">
  <tr>
    <th><%= t('activerecord.attributes.item.item_identifier') -%></th>
    <th><%= t('activerecord.attributes.item.call_number') -%></th>
    <th><%= t('activerecord.models.manifestation') -%></th>
    <th><%= t('activerecord.models.library') -%></th>
    <th><%= t('activerecord.models.shelf') -%></th>
    <th><%= t('activerecord.models.circulation_status') -%></th>
  </tr>
  
<%- for item in @items -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if item.item_identifier.blank? -%>
        (<%= link_to ('no number'), item -%>)
      <%- else -%>
        <%= link_to h(item.item_identifier), item -%>
      <%- end -%>
    </td>
    <td><%=h item.call_number -%></td>
    <td>
      <%- if item.manifestation -%>
        <%= render :partial => "manifestations/show_index", :locals => {:manifestation => item.manifestation} -%>
      <%- else -%>
        (<%= link_to ('No manifestation'), item_exemplify_path(item) -%>)
      <%- end -%>
    </td>
    <td><%= link_to h(item.shelf.library.name), library_path(item.shelf.library.short_name) -%></td>
    <td><%= link_to h(item.shelf.name), item.shelf -%></td>
    <td><%=h item.circulation_status.display_name -%></td>
    <%- if item.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.edit'), edit_item_path(item) -%></td>
      <td><%= link_to t('page.destroy'), item_path(item), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@items, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>
