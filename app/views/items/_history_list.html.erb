<div id="history">
  <ul>
    <%- @item.versions.reverse.each_with_index do |version, i| -%>
      <li>
        <%= link_to l(version.created_at), item_path(@item, :version_id => version.id) -%>
        <%- if i == 0 -%>
          (<%= t('page.current_version') -%>)
        <%- end -%>
      </li>
    <%- end -%>
  </ul>
</div>
