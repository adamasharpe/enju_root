<%- item.shelf.picture_files.each do |picture_file| -%>
  <%= link_to image_tag('/icons/picture.png', :size => '16x16', :alt => t('page.picture')), picture_file_path(picture_file, :format => FileWrapper.get_mime(picture_file.picture.path).split('/')[1]), :rel => "item_#{item.id}_manifestation_#{item.manifestation.id}" -%>
<%- end -%>
<script type="text/javascript">
  jQuery(document).ready(function(){
      jQuery("a[rel='item_<%= item.id -%>_manifestation_<%= item.manifestation.id -%>']").colorbox({transition:"none"});
  })
</script>
