<div style="color: red"><%=h flash[:message] -%></div>

<div id="submenu">
  <div id="manifestation_book_jacket">
    <%- cache(:controller => :manifestations, :action => :show, :id => @item.manifestation.id, :action_suffix => 'book_jacket') do -%>
      <%= book_jacket(@item.manifestation) -%>
    <%- end -%>
  </div>

  <ul>
    <%- if @shelf -%>
      <li><%= link_to t('edit'), edit_library_shelf_item_path(@shelf.library, @shelf, @item) -%></li>
    <%- else -%>
      <li><%= link_to t('edit'), edit_item_path(@item) -%></li>
    <%- end -%>
    <li><%= link_to ('Back'), items_path -%></li>
    <li><%= link_to t('destroy'), item_path(@item), :confirm => ('Are you sure?'), :method => :delete -%></li>
    <li><%= link_to ('Inter library loan index'), item_inter_library_loans_path(@item) -%></li>
    <%- if @item.inter_library_loans.blank? -%>
      <li><%= link_to ('New inter library loan'), new_item_inter_library_loan_path(@item) -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
<p>
  <b><%= ('Manifestation') -%>:</b>
  <div>
    <%- cache(:id => @item.manifestation.id, :action => :show, :action_suffix => 'show_index') do -%>
      <%- if @item.manifestation -%>
        <%= render :partial => 'manifestations/show_index', :locals => {:manifestation => @item.manifestation} -%>
      <%- end -%>
    <%- end -%>
  </div>
</p>

<p>
  <b><%= ('Shelf') -%>:</b>
  <%= link_to h(@item.shelf.name), shelf_path(@item.shelf_id) -%>
  (<%= link_to h(@item.shelf.library.name), library_path(@item.shelf.library.short_name) -%>)
</p>

<p>
  <b><%= ('Circulation status') -%>:</b>
  <%=h @item.circulation_status.display_name -%>
</p>

<p>
  <b><%= ('Call number') -%>:</b>
  <%=h @item.call_number -%>
</p>

<p>
  <b><%= ('Item identifier') -%>:</b>
  <%=h @item.item_identifier -%>
  <br />
  <%= image_tag("#{barcode_url(@item.barcode)}.png", :alt => @item.item_identifier) if @item.barcode -%>
</p>

<p>
  <b><%= ('Price') -%>:</b>
  <%=h @item.price -%>
</p>

<p>
  <b><%= ('URL') -%>:</b>
  <%=h @item.url -%>
</p>

<p>
  <b><%= ('Include supplements') -%>:</b>
  <%- if @item.include_supplements -%>
    Yes
  <%- else -%>
    No
  <%- end -%>
</p>

<p>
<b><%= ('Use restriction') -%>:</b>
<ul>
<%- @item.use_restrictions.each do |use_restriction| -%>
  <li><%= link_to h(use_restriction.display_name), use_restriction_path(use_restriction) -%></li>
<%- end -%>
</ul>
</p>

<%- if_authorized?(:destroy, @item) do -%>

  <p>
    <b><%= ('Donors') -%>:</b>
    <%- @item.donors.each do |patron| -%>
      <%= link_to h(patron.full_name), patron -%>
    <%- end -%>
  </p>
<%- end -%>

<p>
  <b><%= ('Created at') -%>:</b>
  <%=h @item.created_at -%>
</p>

<p>
  <b><%= ('Updated at') -%>:</b>
  <%=h @item.updated_at -%>
</p>
</div>
