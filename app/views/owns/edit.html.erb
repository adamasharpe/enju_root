<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), own_path(@own) -%></li>
    <li><%= link_to t('page.back'), owns_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= t('page.editing', :model => t('activerecord.models.own')) -%></h1>

<%= error_messages_for :own -%>

<%- form_for(:own, :url => own_path(@own), :html => { :method => :put }) do |f| -%>
  <p>
  <b><%= t('page.library') -%></b><br />
    <%= f.text_field :patron_id -%>
  </p>

  <p>
  <b><%= t('activerecord.models.item') -%></b><br />
    <%= f.text_field :item_id -%>
  </p>

  <p>
    <%= submit_tag t('page.update') -%>
  </p>
<%- end -%>

</div>
