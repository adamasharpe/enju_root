<p>
  <b>From date:</b>
  <%=h @bookmark_stat.from_date %>
</p>

<p>
  <b>To date:</b>
  <%=h @bookmark_stat.to_date %>
</p>

<p>
  <b>Note:</b>
  <%=h @bookmark_stat.note %>
</p>

<table id="index">
  <tr>
    <th><%= 'Manifestation' %></th>
    <th><%= 'Checkouts count' %></th>
  </tr>
  <%- @stats.each do |stat| -%>
    <tr class="line<%= cycle("0", "1") -%>">
      <td>
        <%= render :partial => 'manifestations/show_index', :locals => {:manifestation => stat.manifestation} -%>
      </td>
      <td><%=h stat.checkouts_count %></td>
    </tr>
  <% end -%>
</table>

<%= link_to t('page.edit'), edit_bookmark_stat_path(@bookmark_stat) %> |
<%= link_to t('page.back'), bookmark_stats_path %>
