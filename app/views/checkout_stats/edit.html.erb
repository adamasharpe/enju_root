<h1>Editing checkout_stat</h1>

<% form_for(@checkout_stat) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :from_date %><br />
    <%= f.datetime_select :from_date %>
  </p>
  <p>
    <%= f.label :to_date %><br />
    <%= f.datetime_select :to_date %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note, :class => 'resource_textarea' %>
  </p>
  <p>
    <%= f.submit t('page.update') %>
  </p>
<% end %>

<%= link_to t('page.show'), @checkout_stat %> |
<%= link_to t('page.back'), checkout_stats_path %>
