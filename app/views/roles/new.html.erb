<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), roles_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('New role') -%></h1>

<%= error_messages_for :role -%>

<%- form_for(:role, :url => roles_path) do |f| -%>
  <p>
    <b><%= ('Name') -%></b><br />
    <%= f.text_field :name -%>
  </p>

  <p>
    <b><%= ('Display name') -%></b><br />
    <%= f.text_field :display_name -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('page.created_at') -%></b><br />
    <%= f.datetime_select :created_at -%>
  </p>

  <p>
    <b><%= t('page.updated_at') -%></b><br />
    <%= f.datetime_select :updated_at -%>
  </p>

  <p>
    <%= submit_tag t('page.create') -%>
  </p>
<%- end -%>

</div>
