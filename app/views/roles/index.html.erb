<h1><%= t('page.listing', :model => t('activerecord.models.role')) -%></h1>

<table id="index">
  <tr>
    <th><%= t('activerecord.attributes.role.name') -%></th>
    <th><%= t('activerecord.attributes.role.display_name') -%></th>
    <th><%= t('activerecord.attributes.role.score') -%></th>
    <th><%= t('activerecord.attributes.role.note') -%></th>
    <th><%= t('page.created_at') -%></th>
    <th><%= t('page.updated_at') -%></th>
  </tr>
  
<%- for role in @roles -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(role.name), role -%></td>
    <td><%= link_to h(role.display_name), role -%></td>
    <td><%=h role.score -%></td>
    <td><%=h role.note -%></td>
    <td><%=h role.created_at -%></td>
    <td><%=h role.updated_at -%></td>
    <td><%= link_to t('page.show'), role -%></td>
    <td><%= link_to t('page.edit'), edit_role_path(role) -%></td>
    <td><%= link_to t('page.destroy'), role, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

<br />

<%= link_to t('page.new', :model => t('activerecord.models.role')), new_role_path -%>
