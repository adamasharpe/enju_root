<div id="submenu">
  <ul>
    <li><%= link_to t('show'), role_path(@role) -%></li>
    <li><%= link_to ('Back'), roles_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing role') -%></h1>

<%= error_messages_for :role -%>

<%- form_for(:role, :url => role_path(@role), :html => { :method => :put }) do |f| -%>
  <p>
    <b><%= ('Name') -%></b><br />
    <%= f.text_field :name -%>
  </p>

  <p>
    <b><%= ('Display name') -%></b><br />
    <%= f.text_field :display_name -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= submit_tag t('update') -%>
  </p>
<%- end -%>

</div>
