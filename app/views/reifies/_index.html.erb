<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.reify')) -%></h1>
<div id="content_list">

<table class="table table-striped index">
  <tr>
    <th><%= t('activerecord.models.work') -%></th>
    <th><%= t('activerecord.models.expression') -%></th>
  </tr>

<%- @reifies.each do |reify| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to reify.work.original_title, reify.work -%></td>
    <td><%= link_to reify.expression.original_title, reify.expression -%></td>
    <%- if can? :destroy, reify -%>
      <td><%= link_to t('page.show'), reify -%></td>
      <td><%= link_to t('page.destroy'), reify, :data => {:confirm => t('page.are_you_sure')}, :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= paginate(@reifies) -%>
</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <%- if can? :create, Reify -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.reify')), new_reify_path -%></li>
    <%- end -%>
  </ul>
</div>
