<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @reify -%></li>
    <li><%= link_to t('page.back'), reifies_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.reify')) -%></h1>
<div id="content_list">

<%= error_messages_for :reify -%>

<%- form_for(@reify, :html => { :method => :put }) do |f| -%>
  <p>
    <b><%= t('activerecord.models.work') -%></b><br />
    <%= f.text_field :work_id -%>
  </p>

  <p>
    <b><%= t('activerecord.models.expression') -%></b><br />
    <%= f.text_field :expression_id -%>
  </p>

  <p>
    <%= f.label t('activerecord.models.work_to_expression_rel_type') -%><br />
    <%= f.select(:work_to_expression_rel_type_id, @work_to_expression_rel_types.collect{|r| [r.display_name.localize, r.id]}) -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
