<%= form_for(@reify) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label t('activerecord.models.work') -%><br />
    <%- if @reify.work -%>
		  <%= link_to @reify.work.original_title, @reify.work -%>
      <%= f.hidden_field :work_id -%>
    <%- else -%>
      <%= f.text_field :work_id -%>
    <%- end -%>
  </div>
  <div class="field">
    <%= f.label t('activerecord.models.expression') -%><br />
    <%- if @reify.expression -%>
		  <%= link_to @reify.expression.original_title, @reify.expression -%>
      <%= f.hidden_field :expression_id -%>
    <%- else -%>
      <%= f.text_field :expression_id -%>
    <%- end -%>
  </div>
  <div class="field">
    <%= f.label t('activerecord.models.work_to_expression_rel_type') -%><br />
    <%= f.select(:relationship_type_id, @work_to_expression_rel_types.collect{|r| [r.display_name.localize, r.id]}) -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>
