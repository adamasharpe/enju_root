<div id="submenu">
  <ul>
    <%- if_authorized?(:new, Realize) do -%>
      <li><%= link_to ('New reify'), new_work_reify_path(@work) -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
  <h1>
    <%= link_to h(@work.original_title), @work -%>
  </h1>
<table>
  <tr>
    <th><%= ('Expression') -%></th>
    <th><%= ('Created at') -%></th>
    <th><%= ('Updated at') -%></th>
  </tr>

<%- for reify in @reifies -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(reify.expression.original_title), expression_path(reify.expression) -%></td>
    <td><%=h reify.created_at -%></td>
    <td><%=h reify.updated_at -%></td>
    <%- if_authorized?(:destroy, reify) do -%>
      <td><%= link_to t('destroy'), work_reify_path(@work, reify), :confirm => ('Are you sure?'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@reifies) -%>

</div>
