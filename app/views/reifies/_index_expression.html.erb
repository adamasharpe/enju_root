<div id="submenu">
  <ul>
    <%- if_authorized?(:new, Realize) do -%>
      <li><%= link_to ('New reify'), new_expression_reify_path(@expression) -%></li>
      <li><%= link_to t('page.back'), expression_patrons_path(@expression) -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
  <h1>
    <%= link_to h(@expression.original_title), expression_path(@expression) -%>
  </h1>

<table id="index">
  <tr>
    <th><%= t('page.expression') -%></th>
  </tr>

<%- for reify in @reifies -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%= link_to h(reify.expression.original_title), expression_path(reify.expression) -%>
      <%= expression_form_icon(@expression.expression_form) -%>
      <br />
      <%= patrons_list(@expression.authors) -%>
      <%= patrons_list(@expression.patrons) -%>
    </td>
    <%- if_authorized?(:destroy, reify) do -%>
      <td><%= link_to t('page.destroy'), expression_reify_path(@expression, reify), :confirm => t('page.are_you_sure'), :method => :delete -%></td>
      <td><%= reify.first? ? '' : link_to('▲', {:action => 'update', :position => (reify.position > 1 ? reify.position - 1 : 1), :id => reify.id, :expression_id => @expression.id}, :method => :put) -%></td>
      <td><%= reify.last? ? '' : link_to('▼', {:action => 'update', :position => (reify.position + 1), :id => reify.id, :expression_id => @expression.id}, :method => :put) -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@reifies) -%>

</div>
