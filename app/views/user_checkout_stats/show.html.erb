<div id="sidebar">
  <ul>
    <li><%= link_to t('page.edit'), edit_user_checkout_stat_path(@user_checkout_stat) -%></li>
    <li><%= link_to t('page.back'), user_checkout_stats_path -%></li>
  </ul>
  <h4><%= t('page.export') -%></h4>
  <ul>
    <li><%= link_to ('CSV'), user_checkout_stat_path(@user_checkout_stat, :format => :csv, :locale => @locale) -%></li>
  </ul>
</div>

<div class="inner">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.user_checkout_stat')) -%></h1>
<div class="inner">
<p>
  <b><%= t('activerecord.attributes.user_checkout_stat.start_date') -%>:</b>
  <%= l(@user_checkout_stat.start_date) -%>
</p>

<p>
  <b><%= t('activerecord.attributes.user_checkout_stat.end_date') -%>:</b>
  <%= l(@user_checkout_stat.end_date) -%>
</p>

<p>
  <b><%= t('activerecord.attributes.user_checkout_stat.note') -%>:</b>
  <%=h @user_checkout_stat.note -%>
</p>

<table class="index">
  <tr>
    <th><%= t('activerecord.models.user') -%></th>
    <th><%= t('activerecord.attributes.checkout_stat_has_user.checkouts_count') -%></th>
  </tr>
  <%- @stats.each do |stat| -%>
    <tr class="line<%= cycle("0", "1") -%>">
      <td>
        <%= link_to h(stat.user.login), user_path(stat.user.login) -%>
      </td>
      <td><%=h stat.checkouts_count -%></td>
    </tr>
  <% end -%>
</table>

<%= will_paginate(@stats, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
</div>
