<div id="submenu">
  <ul>
    <li><%= link_to t('page.edit'), edit_user_checkout_stat_path(@user_checkout_stat) -%></li>
    <li><%= link_to t('page.back'), user_checkout_stats_path -%></li>
  </ul>
</div>

<div id="content_detail">
<p>
  <b>From date:</b>
  <%=h @user_checkout_stat.from_date -%>
</p>

<p>
  <b>To date:</b>
  <%=h @user_checkout_stat.to_date -%>
</p>

<p>
  <b><%= t('activerecord.attributes.user_checkout_stat.note') -%>:</b>
  <%=h @user_checkout_stat.note -%>
</p>

<table id="index">
  <tr>
    <th><%= t('activerecord.models.user') -%></th>
    <th><%= 'Checkouts count' -%></th>
  </tr>
  <%- @stats.each do |stat| -%>
    <tr class="line<%= cycle("0", "1") -%>">
      <td>
        <%= link_to h(stat.user.login), user_path(stat.user.login) -%>
      </td>
      <td><%=h stat.checkouts_count -%></td>
    </tr>
  <% end -%>
</table>

<%= will_paginate(@stats, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>

</div>
