<div id="submenu">
  <ul>
    <li><%= link_to ('Back'), expression_merges_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('New expression_merge') -%></h1>

<%= error_messages_for :expression_merge -%>

<%- form_for(@expression_merge) do |f| -%>
  <p>
  <b><%= ('Expression') -%></b><br />
  <%- if @expression -%>
    <%= link_to h(@expression.original_title), expression_path(@expression) -%>
    <%= f.hidden_field :expression_id, :value => @expression.id -%>
  <%- else -%>
    <%= f.text_field :expression_id, :value => params[:expression_id] -%>
  <%- end -%>
  </p>

  <p>
  <b><%= ('Expression merge list') -%></b><br />
  <%- if @expression_merge_list -%>
    <%= link_to h(@expression_merge_list.title), expression_merge_list_path(@expression_merge_list) -%>
    <%= f.hidden_field :expression_merge_list_id, :value => @expression_merge_list.id -%>
  <%- else -%>
    <%= f.text_field :expression_merge_list_id, :value => params[:expression_merge_list_id] -%>
  <%- end -%>
  </p>

  <p>
    <%= f.submit t('create') -%>
  </p>
<%- end -%>

</div>
