<div id="sidebar">
  <ul>
    <li><%= link_to t('page.show'), @expression_merge -%></li>
    <li><%= link_to t('page.back'), expression_merges_path -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.expression_merge')) -%></h1>

<%= error_messages_for :expression_merge -%>

<%- form_for(@expression_merge) do |f| -%>

  <p>
    <b><%= t('activerecord.models.expression') -%></b><br />
    <%= f.text_field :expression_id, :value => @expression_merge.expression_id -%>
  </p>

  <p>
    <b><%= t('activerecord.models.expression_merge_list') -%></b><br />
    <%= f.text_field :expression_merge_list_id, :value => @expression_merge.expression_merge_list_id -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
