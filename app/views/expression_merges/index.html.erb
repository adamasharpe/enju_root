<div id="sidebar">
  <ul>
    <%- if @expression_merge_list -%>
      <li><%= link_to ('Add an expression'), expression_merge_list_expressions_path(@expression_merge_list) -%></li>
    <%- end -%>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.expression_merge')) -%></h1>
<div class="inner">

<table class="index">
  <tr>
    <td><%= t('activerecord.models.expression') -%></td>
    <td><%= t('activerecord.attributes.expression_merge_list') -%></td>
  </tr>

<%- for expression_merge in @expression_merges -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(expression_merge.expression.original_title), expression_path(expression_merge.expression) -%></td>
    <td><%= link_to h(expression_merge.expression_merge_list.title), expression_merge_list_path(expression_merge.expression_merge_list) -%></td>
    <td><%= link_to t('page.show'), expression_merge -%></td>
    <td><%= link_to t('page.edit'), edit_expression_merge_path(expression_merge) -%></td>
    <td><%= link_to t('page.destroy'), expression_merge, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@expression_merges, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>
