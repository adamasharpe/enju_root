<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @subject -%></li>
    <li><%= link_to t('page.back'), subjects_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= t('page.editing', :model => t('activerecord.models.subject')) -%></h1>

<%= error_messages_for :subject -%>

<%- form_for(:subject, :html => { :method => :put }) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.subject.term') -%></b><br />
    <%=h @subject.term -%> (<%=h @subject.term_transcription -%>)
  </p>

  <p>
    <b><%= t('activerecord.attributes.subject.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= submit_tag t('page.update') -%>
  </p>
<%- end -%>

</div>
