<div id="content_detail">
  <h2 class="title"><%= t('devise.passwords.link') -%></h2>
  <div id="content_list">

<% form_for resource_name, resource, :url => password_path(resource_name) do |f| %>
  <%= f.error_messages %>

  <p><%= f.label t('activerecord.attributs.user.email') %></p>
  <p><%= f.text_field :email, :class => 'resource_email' %></p>

  <p><%= f.submit "Send me reset password instructions" %></p>
  <%= javascript_tag("$('user_email').focus()") -%>
<% end %>

<%= render :partial => "shared/devise_links" %>

</div>
</div>

<div id="submenu">
</div>
