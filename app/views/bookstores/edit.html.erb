<div id="submenu">
  <ul>
    <li><%= link_to t('show'), @bookstore -%></li>
    <li><%= link_to ('Back'), bookstores_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= ('Editing bookstore') -%></h1>

<%= error_messages_for :bookstore -%>

<%- form_for(@bookstore) do |f| -%>
  <p>
  <b><%= ('Name') -%></b><br />
    <%= f.text_field :name -%>
  </p>

  <p>
    <b><%= ('Address') -%></b><br />
    <%= f.text_area :address, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= ('Telephone number') -%></b><br />
    <%= f.text_field :telephone_number -%>
  </p>

  <p>
    <b><%= ('Fax number') -%></b><br />
    <%= f.text_field :fax_number -%>
  </p>

  <p>
    <b><%= ('Url') -%></b><br />
    <%= f.text_field :url, :class => 'resource_url' -%>
  </p>

  <p>
    <b><%= ('Note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('update') -%>
  </p>
<%- end -%>
</div>
