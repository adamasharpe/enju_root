<%- if logged_in? -%>
  <ul>
  <%- if current_user.has_role?('Librarian') -%>
    <li><%= link_to t('question.all'), questions_path -%></li>
  <%- end -%>
  <%- if Question.is_creatable_by(current_user) -%>
    <li><%= link_to t('question.my'), user_questions_path(current_user.login) -%></li>
    <li><%= link_to t('page.new', :model => t('activerecord.models.question')), new_user_question_path(current_user.login) -%></li>
  <%- end -%>
  </ul>
<%- end -%>

<%- if @resources -%>
<h4><%= link_to t('question.crd'), "http://crd.ndl.go.jp/" -%></h4>
  <p><%= t('question.number_of_search_results', :count => @refkyo_count) -%><br />
  <ul>
    <%- @resources.each do |resource| -%>
      <li><%= link_to h(truncate(resource.title)), resource.link -%></li>
    <%- end -%>
  </ul>
  <%= will_paginate(@crd_results, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next'), :param_name => :crd_page, :class => 'sidebar_pagination') -%>
<%- else -%>
  <p><%= link_to t('question.you_can_search_crd'), "http://crd.ndl.go.jp/" -%></p>
<%- end -%>
