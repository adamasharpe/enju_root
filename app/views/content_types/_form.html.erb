<%= form_for(@content_type) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label t('activerecord.attributes.content_type.name') -%><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.attributes.content_type.display_name') -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.attributes.content_type.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
