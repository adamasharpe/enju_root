<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @content_type -%></li>
    <li><%= link_to t('page.back'), content_typees_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.content_type')) -%></h1>
<div id="content_list">

<%= error_messages_for :content_type -%>

<%- form_for(@content_type) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.content_type.display_name') -%></b><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.content_type.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
