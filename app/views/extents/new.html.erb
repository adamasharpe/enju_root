<div id="submenu">
  <ul>
    <li><%= link_to t('page.back'), extents_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.extent')) -%></h1>
<div id="content_list">

<%= error_messages_for :extent -%>

<%- form_for(:extent, :url => extents_path) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.extent.name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.extent.display_name') -%></b><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.extent.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>
