<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.extent')), new_extent_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.extent')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.extent.name') -%></th>
    <th><%= t('activerecord.attributes.extent.display_name') -%></th>
    <th><%= t('activerecord.attributes.extent.note') -%></th>
  </tr>

<%- @extents.each do |extent| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if extent.is_deletable_by(current_user) -%>
        <%= move_position(extent) -%>
      <%- end -%>
    </td>
    <td><%= link_to h(extent.name), extent -%></td>
    <td><%= link_to h(extent.display_name.localize), extent -%></td>
    <td><%=h extent.note -%></td>
    <td><%= link_to t('page.edit'), edit_extent_path(extent) -%></td>
    <td><%= link_to t('page.destroy'), extent, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@extents, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>
