<div id="sidebar">
  <ul>
    <li><%= link_to t('page.back'), message_queues_path -%></li>
  </ul>
</div>

<div class="inner">
  <h1 class="title"><%= t('page.new', :model => t('activerecord.models.message_queue')) -%></h1>
<div class="inner">

<%- form_for(@message_queue) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('message.sender') -%><br />
    <%= link_to h(current_user.login), user_path(current_user.login) -%>
    <%= f.hidden_field :sender_id -%>
  </p>
  <p>
    <%= f.label t('message.receiver') -%><br />
    <%= f.text_field :receiver_id -%>
  </p>
  <p>
    <%= f.label t('activerecord.models.message_template') -%><br />
    <%= f.select(:message_template_id, @message_templates.collect{|m| [m.title, m.id]}) -%>
  </p>
  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>
</div>
</div>
