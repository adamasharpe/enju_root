<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.barcode')) -%></h1>
<div id="content_list">

<table id="index">
  <tr>
    <th>Barcode type</th>
    <th>Barcodable</th>
    <th>Barcodable type</th>
  </tr>

<%- for barcode in @barcodes -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%=h barcode.barcode_type -%></td>
    <td><%=h barcode.barcodable_id -%></td>
    <td><%=h barcode.barcodable_type -%></td>
    <td><%= link_to t('page.show'), barcode -%></td>
    <td><%= link_to t('page.edit'), edit_barcode_path(barcode) -%></td>
    <td><%= link_to t('page.destroy'), barcode, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@barcodes, :previous_label => "&#171; " + t('page.previous'), :next_label => "&#187; " + t('page.next')) -%>
</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.barcode')), new_barcode_path -%></li>
  </ul>
</div>
