<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @language -%></li>
    <li><%= link_to t('page.back'), languages_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.language')) -%></h1>
<div id="content_list">

<%- form_for(@language) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.attributes.language.native_name') -%><br />
    <%= f.text_field :native_name -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.language.name') -%>:<br />
    <%= @language.name -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.language.display_name') -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.language.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
