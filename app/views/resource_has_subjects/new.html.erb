<div id="submenu">
  <ul>
    <%- if @work -%>
      <li><%= link_to ('Back to subjects'), work_subjects_path(@work) -%></li>
    <%- else -%>
      <li><%= link_to t('page.back_to_index'), resource_has_subjects_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.resource_has_subject')) -%></h1>

<%- form_for(@resource_has_subject) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label :work_id -%><br />
    <%- if @work -%>
      <%= link_to h(@work.original_title), @work -%>
      <%= f.hidden_field :work_id, :value => @work.id -%>
    <%- else -%>
      <%= f.text_field :work_id -%>
    <%- end -%>
  </p>
  <p>
    <%= f.label :subject_id -%><br />
    <%= f.text_field :subject_id -%>
  </p>
  <p>
    <%= f.label :subject_type -%><br />
    <%= f.hidden_field :subject_type -%>
  </p>
  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
