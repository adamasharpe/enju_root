<div id="submenu">
  <ul>
    <%- if @manifestation -%>
      <li><%= link_to t('page.listing', :model => t('activerecord.models.manifestation')), manifestation_subjects_path(@manifestation) -%></li>
    <%- else -%>
      <li><%= link_to t('page.back_to_index'), resource_has_subjects_path -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.resource_has_subject')) -%></h1>
<div id="content_list">

<%- form_for(@resource_has_subject) do |f| -%>
  <%= f.error_messages -%>

  <%- if @manifestation -%>
    <p>
      <%= f.label t('resource_has_subject.subjectable') -%><br />
      <%= link_to h(@manifestation.original_title), @manifestation -%>
      <%= f.hidden_field :subjectable_id, :value => @manifestation.id -%>
      <%= f.hidden_field :subjectable_type, :value => @manifestation.class.to_s -%>
    </p>
  <%- else -%>
    <p>
      <%= f.label :subjectable_id -%><br />
      <%= f.text_field :subjectable_id -%>
    </p>
    <p>
      <%= f.label :subjectable_type -%><br />
      <%= f.text_field :subjectable_type -%>
    </p>
  <%- end -%>
  <p>
    <%= f.label t('activerecord.models.subject') -%><br />
    <%- if @subject -%>
      <%= link_to h(@subject.term), @subject -%>
      <%= f.hidden_field :subject_id -%>
    <%- else -%>
      <%= f.text_field :subject_id -%>
    <%- end -%>
  </p>
  <p>
    <%= f.submit t('page.create') -%>
  </p>
<%- end -%>

</div>
</div>
