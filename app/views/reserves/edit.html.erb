<div id="sidebar">
  <ul>
    <li><%= link_to t('page.show'), user_reserve_path(@reserve.user.login, @reserve) -%></li>
    <li><%= link_to t('page.back'), user_reserves_path(@reserve.user.login) -%></li>
  </ul>
</div>

<div class="inner">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.reserve')) -%></h1>
<div class="inner">

<%= error_messages_for :reservation -%>

<%- form_for(@reserve, :url => user_reserve_path(@reserve.user.login, @reserve)) do |f| -%>
  <p>
    <b><%= t('activerecord.models.patron') -%></b><br />
    <%= link_to h(@reserve.user.patron.full_name), @reserve.user.patron -%> (<%=h @reserve.user.login -%>)
  </p>

  <p>
  <b><%= t('activerecord.models.manifestation') -%></b><br />
    <%- if @reserve.manifestation -%>
      <%= link_to h(@reserve.manifestation.original_title), @reserve.manifestation -%><br />
      <%= f.hidden_field :manifestation_id -%>
    <%- else -%>
      <%= f.text_field :manifestation_id -%>
    <%- end -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.reserve.expired_at') -%></b><br />
    <%= f.date_select :expired_at, :include_blank => true -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>
