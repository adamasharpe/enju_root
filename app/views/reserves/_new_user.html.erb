<div id="content_detail">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.reserve')) -%></h1>
<div id="content_list">

<%- form_for(@reserve) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.models.user') -%><br />
    <%= link_to h(@user.patron.full_name), @user.patron -%>
    (<%= @user.login -%>)
  </p>

  <p>
    <%- if @item -%>
      <%= render :partial => 'manifestations/title', :locals => {:manifestation => @reserve.manifestation} -%>
      (<%= link_to h(@item.item_identifier), @item -%>)
      <%= f.hidden_field :manifestation_id, :value => @item.manifestation.id -%>
      <%= f.hidden_field :item_id, :value => @item.id -%>
    <%- elsif @manifestation -%>
      <%= render :partial => 'manifestations/title', :locals => {:manifestation => @manifestation} -%>
      <%= f.hidden_field :manifestation_id -%>
    <%- else -%>
      <p>
        <%= f.label t('activerecord.models.manifestation') -%><br />
        <%= f.text_field :manifestation_id -%>
      </p>
    <%- end -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.reserve.expired_at') -%><br />
    <%= f.date_text_field :expired_at, :class => 'date_field', :blank => true -%>
  </p>

  <p>
    <%= f.hidden_field :user_number, :class => 'resource_user_number', :value => @user.user_number -%>
    <%= submit_tag t('page.create'), :confirm => t('page.are_you_sure') -%>
  </p>
<%- end -%>
</div>
</div>

<div id="submenu">
  <%= render :partial => 'manifestations/book_jacket', :locals => {:manifestation => @reserve.manifestation} -%>
  <ul>
    <li><%= link_to t('page.listing', :model => t('activerecord.models.reserve')), user_reserves_path(@user.login) -%></li>
    <%- if @manifestation -%>
      <li><%= link_to t('page.listing', :model => t('activerecord.models.manifestation')), @manifestation -%></li>
    <%- end -%>
  </ul>
</div>
