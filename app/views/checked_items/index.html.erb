<div id="sidebar">
  <ul>
    <%- @basket.user.user_group.user_group_has_checkout_types.each do |available_checkout_type| -%>
      <li>
        <%=h available_checkout_type.checkout_type.display_name.localize -%>:
        <%=h @basket.user.checked_item_count[:"#{h(available_checkout_type.checkout_type.name)}"] -%> / <%=h available_checkout_type.checkout_limit -%>
      </li>
    <%- end -%>
  </ul>
  <ul>
    <li><%= link_to t('activerecord.models.checkin'), checkins_path -%></li>
    <li><%= link_to t('activerecord.models.reserve'), user_reserves_path(@basket.user.login) -%></li>
  </ul>
</div>

<div id="main">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.checked_item')) -%></h1>
<div class="inner">

<div id="checked_item_list">
  <%= render :partial => 'list' -%>
</div>

<br />

<%= render :partial => 'checkouts' -%>
</div>
</div>
