<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), library_path(@library.short_name) -%></li>
    <li><%= link_to t('page.back'), libraries_path -%></li>
  </ul>
</div>


<div id="content_detail">
<h1><%= t('page.editing', :model => t('activerecord.models.library')) -%></h1>

<%= error_messages_for :library -%>

<%- form_for(:library, :url => library_path(@library.short_name), :html => { :method => :put }) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.library.name') -%></b><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library.short_display_name') -%></b><br />
    <%= f.text_field :short_display_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library.short_name') -%></b><br />
    <%= f.text_field :short_name, :class => 'resource_title' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library.zip_code') -%></b><br />
    <%= f.text_field :zip_code -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library.address') -%></b><br />
    <%= f.text_area :address, :class => 'resource_textarea' -%>
  </p>

  <p>
    <b><%= t('page.telephone_number') -%> 1</b><br />
    <%= f.text_field :telephone_number_1 -%>
  </p>

  <p>
    <b><%= t('page.telephone_number') -%> 2</b><br />
    <%= f.text_field :telephone_number_2 -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library.fax_number') -%></b><br />
    <%= f.text_field :fax_number -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library.call_number_rows') -%></b><br />
    <%= f.text_field :call_number_rows, :class => 'resource_integer' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library.call_number_delimiter') -%></b><br />
    <%= f.text_field :call_number_delimiter, :class => 'resource_integer' -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.library.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
