<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.item_has_use_restriction')) -%></h1>

<%= error_messages_for :item_has_use_restriction -%>

<%- form_for(@item_has_use_restriction) do |f| -%>
  <p>
    <b><%= t('activerecord.models.item') -%></b><br />
    <%- if @item_has_use_restriction.item -%>
      <%= link_to h(@item_has_use_restriction.item.item_identifier), @item_has_use_restriction.item -%> (<%= link_to h(@item_has_use_restriction.item.manifestation.original_title), @item_has_use_restriction.item.manifestation -%>)
      <%= f.hidden_field :item_id -%>
    <%- else -%>
      <%= f.text_field :item_id -%>
    <%- end -%>
  </p>

  <p>
    <b><%= t('activerecord.models.use_restriction') -%></b><br />
    <%= f.select(:use_restriction_id, @use_restrictions.collect{|u| [u.name, u.id]}) -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

<%= link_to t('page.show'), @item_has_use_restriction -%> |
<%= link_to t('page.back'), item_has_use_restrictions_path -%>
