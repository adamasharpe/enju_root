<div id="submenu">
  <ul>
    <%- if_authorized?(:new, Produce) do -%>
      <li><%= link_to ('New produce'), new_patron_produce_path(@patron) -%></li>
      <li><%= link_to t('page.back'), patron_manifestations_path(@patron) -%></li>
    <%- end -%>
  </ul>
</div>

<div id="content_detail">
  <h1>
    <%= link_to h(@patron.full_name), @patron -%>
  </h1>

<table style="width: 100%">
  <tr>
    <th><%= t('page.manifestation') -%></th>
  </tr>
  
<%- for produce in @produces -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%= link_to h(produce.manifestation.original_title), produce.manifestation -%>
      <%= form_icon(produce.manifestation.manifestation_form) -%><br />
      <%= patrons_list(produce.manifestation.authors, :link => true) -%>
      <%= patrons_list(produce.manifestation.editors, :link => true) -%>
      <%= patrons_list(produce.manifestation.patrons, :link => true) -%>
    </td>
    <%- if_authorized?(:destroy, produce) do -%>
      <td><%= link_to t('page.destroy'), patron_produce_path(produce.patron, produce), :confirm => ('Are you sure?'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

<br />

<%= will_paginate(@produces) -%>
</div>
