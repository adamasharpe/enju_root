<%- form_for(:produce, :url => produces_path(@patron)) do |f| -%>
  <p>
  <b><%= t('page.patron') -%></b><br />
    <%=h @patron.full_name -%>
    <%= f.hidden_field :patron_id, :value => @patron.id -%>
  </p>

  <p>
  <b><%= t('page.manifestation') -%></b><br />
  <%- if @manifestation -%>
    <%=h @manifestation.original_title -%>
  <%- else -%>
    <%= f.text_field :manifestation_id, :value => params[:manifestation_id] -%>
  <%- end -%>
  </p>

  <p>
    <%= submit_tag t('page.create') -%>
  </p>
<%- end -%>

<%= link_to t('page.back'), produces_path(@patron) -%>
