<div id="sidebar">
  <ul>
    <%- if FormOfWork.is_creatable_by(current_user) -%>
      <li><%= link_to t('page.new', :model => t('activerecord.models.form_of_work')), new_form_of_work_path -%></li>
    <%- end -%>
  </ul>
</div>

<div class="inner">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.form_of_work')) -%></h1>
<div class="inner">

<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.form_of_work.name') -%></th>
    <th><%= t('activerecord.attributes.form_of_work.display_name') -%></th>
    <th><%= t('activerecord.attributes.form_of_work.note') -%></th>
  </tr>

<%- for form_of_work in @form_of_works -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= link_to h(form_of_work.name), form_of_work -%></td>
    <td><%= link_to h(form_of_work.display_name.localize), form_of_work -%></td>
    <td><%=h form_of_work.note -%></td>
    <%- if form_of_work.is_deletable_by(current_user) -%>
      <td><%= link_to t('page.edit'), edit_form_of_work_path(form_of_work) -%></td>
      <td><%= link_to t('page.destroy'), form_of_work, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
    <%- end -%>
  </tr>
<%- end -%>
</table>

</div>
</div>
