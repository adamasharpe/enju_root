<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @classification_type -%></li>
    <li><%= link_to t('page.back'), classification_types_path -%></li>
  </ul>
</div>

<div id="content_detail">
<h1><%= t('page.editing', :model => t('activerecord.models.classification_type')) -%></h1>

<%= error_messages_for :classification_type -%>

<%- form_for(@classification_type) do |f| -%>
  <p>
    <b><%= t('activerecord.attributes.classification_type.name') -%></b><br />
    <%= f.text_field :name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.classification_type.display_name') -%></b><br />
    <%= f.text_field :display_name -%>
  </p>

  <p>
    <b><%= t('activerecord.attributes.classification_type.note') -%></b><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
