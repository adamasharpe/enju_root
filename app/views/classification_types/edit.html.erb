<div id="content_detail">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.classification_type')) -%></h1>
<div id="content_list">

<%- form_for(@classification_type) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.attributes.classification_type.name') -%><br />
    <%= f.text_field :name, :class => 'resource_title' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.classification_type.display_name') -%><br />
    <%= f.text_area :display_name, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.classification_type.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.show'), @classification_type -%></li>
    <li><%= link_to t('page.back'), classification_types_path -%></li>
  </ul>
</div>
