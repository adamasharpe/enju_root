<div id="sidebar">
  <%= render :partial => 'manifestations/book_jacket', :locals => {:manifestation => @checkout.item.manifestation} -%>
  <ul>
    <li><%= link_to t('page.edit'), edit_user_checkout_path(@checkout.user.login, @checkout) -%></li>
    <li><%= link_to t('page.back'), user_checkouts_path(@checkout.user.login) -%></li>
    <%- if current_user.has_role?('Librarian') -%>
      <li><%= link_to t('page.back_to', :model => t('activerecord.models.checkout')), checkouts_path -%></li>
    <%- end -%>
  </ul>
</div>


<div id="main">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.checkout')) -%></h1>
<div class="inner">
  <%= render :partial => 'manifestations/title', :locals => {:manifestation => @checkout.item.manifestation} -%>
  <p>
    <b><%= t('activerecord.attributes.item.item_identifier') -%></b><br />
    <%= link_to h(@checkout.item.item_identifier), @checkout.item -%>
  </p>
  <p>
    <b><%= t('activerecord.attributes.checkout.due_date') -%></b><br />
    <%=h l(@checkout.due_date, :format => :short) -%>
  </p>
  <%- if @checkout.is_deletable_by(current_user) -%>
    <p>
      <b><%= t('checkout.current_user') -%></b><br />
      <%= link_to h(@checkout.user.login), user_path(@checkout.user.login) -%>
    </p>
  <%- end -%>
</div>
</div>
