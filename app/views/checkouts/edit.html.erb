<div id="submenu">
  <%= render :partial => 'manifestations/book_jacket', :locals => {:manifestation => @checkout.item.manifestation} -%>
  <ul>
    <li><%= link_to t('page.show'), user_checkout_path(@checkout.user.login, @checkout) -%></li>
    <li><%= link_to t('page.back'), user_checkouts_path(@checkout.user.login) -%></li>
  </ul>
</div>

<div id="content_detail">
  
<h1><%= t('page.editing', :model => t('activerecord.models.checkout')) -%></h1>

  <%= render :partial => 'manifestations/show_index', :locals => {:manifestation => @checkout.item.manifestation} -%>
  
<h3><%= t('checkout.renewal') -%></h3>
<%- if @checkout.checkout_renewable? -%>
  <%- form_for :checkout, :url => user_checkout_path(@checkout.user.login, @checkout), :html => { :method => :put } do |f| -%>
    <%= t('checkout.new_due_date') -%>: <%=h @renew_due_date -%>
    <%= f.hidden_field :due_date, :value => @renew_due_date -%>
    <br />
    <%= submit_tag t('page.update') -%>
  <%- end -%>
<%- else -%>
  <p><%= t('checkout.this_item_cant_be_renewed') -%></p>
<%- end -%>

<h3><%= t('checkout.editing_due_date') -%></h3>

<%= error_messages_for :checkout -%>

<%- form_for(:checkout, :url => user_checkout_path(@checkout.user.login, @checkout), :html => { :method => :put }) do |f| -%>
  <p><label for="checkout_due_date"><%= t('activerecord.attributes.checkout.due_date') -%></label>
    <%= f.hidden_field :user_id -%>
    <%= f.hidden_field :item_id -%>
    <%= f.date_select :due_date, :value => @renew_due_date  -%>
  </p>
  <p>
    <%= t('checkout.renewal_count') -%>: <%= f.text_field :checkout_renewal_count, :class => 'resource_integer' -%>
  </p>

  <p>
    <%= submit_tag t('page.update') -%>
  </p>
<%- end -%>
</div>
